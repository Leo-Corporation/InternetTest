<UserControl
    x:Class="InternetTest.UserControls.ParameterItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:InternetTest.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="Auto"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <CheckBox
            x:Name="Toggle"
            Margin="5 0"
            VerticalContentAlignment="Center"
            BorderThickness="2"
            Checked="Toggle_Checked"
            Foreground="{DynamicResource Foreground1}"
            Style="{DynamicResource CheckBoxStyle1}"
            Unchecked="Toggle_Checked" />
        <Border
            Grid.Column="1"
            Margin="2"
            Background="{DynamicResource Background3}"
            CornerRadius="5">

            <TextBox
                x:Name="NameTxt"
                Margin="3"
                Padding="3"
                d:Text="123.54.132.56"
                Background="Transparent"
                BorderThickness="0"
                FontWeight="Bold"
                Foreground="{DynamicResource DarkGray}"
                TextChanged="NameTxt_TextChanged" />
        </Border>
        <Border
            Grid.Column="2"
            Margin="2"
            Background="{DynamicResource Background3}"
            CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox
                    x:Name="ValueTxt"
                    Margin="3"
                    Padding="3"
                    d:Text="123.54.132.56"
                    Background="Transparent"
                    BorderThickness="0"
                    FontWeight="Bold"
                    Foreground="{DynamicResource DarkGray}"
                    TextChanged="NameTxt_TextChanged" />
                <PasswordBox
                    x:Name="ValuePwr"
                    Margin="3"
                    Padding="3"
                    Background="Transparent"
                    BorderThickness="0"
                    FontWeight="Bold"
                    Foreground="{DynamicResource DarkGray}"
                    PasswordChanged="ValuePwr_PasswordChanged"
                    Visibility="Collapsed" />
                <Button
                    x:Name="HideBtn"
                    Grid.Column="1"
                    Margin="5 0"
                    Background="Transparent"
                    Click="HideBtn_Click"
                    Content="&#xF3F8;"
                    FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                    Foreground="{DynamicResource Foreground1}"
                    Style="{DynamicResource ToolButton}" />
            </Grid>
        </Border>
    </Grid>
</UserControl>

<UserControl
    x:Class="InternetTest.UserControls.WiFiNetworkItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:InternetTest.Properties"
    xmlns:local="clr-namespace:InternetTest.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="Auto"
    d:DesignWidth="800"
    FontFamily="../Fonts/#Hauora"
    Foreground="{DynamicResource Foreground1}"
    mc:Ignorable="d">
    <Border
        Margin="10"
        Padding="10"
        Background="{DynamicResource CardBackground}"
        CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="15"
                Opacity="0.2"
                ShadowDepth="0"
                Color="{DynamicResource AccentColor}" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    x:Name="StrengthIconTxt"
                    Margin="0 0 10 0"
                    VerticalAlignment="Center"
                    d:Text="&#xF8AD;"
                    FontFamily="../Fonts/#FluentSystemIcons-Regular"
                    FontSize="16" />
                <TextBlock
                    x:Name="SsidTxt"
                    Grid.Column="1"
                    d:Text="WiFi"
                    FontSize="16"
                    FontWeight="ExtraBold" />
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button
                        x:Name="ConnectBtn"
                        Grid.Row="1"
                        Margin="0 0 5 0"
                        Padding="5 2"
                        HorizontalAlignment="Right"
                        Background="{DynamicResource LightAccent}"
                        Click="ConnectBtn_Click"
                        Content="{x:Static lang:Resources.Connect}"
                        Cursor="Hand"
                        FontWeight="ExtraBold"
                        Foreground="{DynamicResource Accent}"
                        Style="{DynamicResource PrimaryButton}" />

                    <Border
                        x:Name="ConnectedIndicator"
                        Grid.Row="1"
                        Padding="10 0"
                        Background="{DynamicResource LightGreen}"
                        CornerRadius="12"
                        Visibility="Collapsed">

                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Foreground="{DynamicResource ForegroundGreen}"
                            Text="{x:Static lang:Resources.ConnectedS}" />
                    </Border>

                    <Button
                        x:Name="CopyBtn"
                        Grid.Column="1"
                        Margin="0 0 5 0"
                        Padding="5"
                        Background="Transparent"
                        Click="CopyBtn_Click"
                        Content="&#xF32C;"
                        FontFamily="../Fonts/#FluentSystemIcons-Regular"
                        Foreground="{DynamicResource Foreground1}"
                        Style="{DynamicResource DefaultButton}">
                        <Button.ToolTip>
                            <ToolTip Content="{x:Static lang:Resources.Copy}" />
                        </Button.ToolTip>
                    </Button>
                    <Button
                        x:Name="ExpanderBtn"
                        Grid.Column="1"
                        Padding="5"
                        Background="Transparent"
                        Click="ExpanderBtn_Click"
                        Content="&#xF2A4;"
                        FontFamily="../Fonts/#FluentSystemIcons-Regular"
                        Foreground="{DynamicResource Foreground1}"
                        Style="{DynamicResource DefaultButton}">
                        <Button.ToolTip>
                            <ToolTip Content="{x:Static lang:Resources.ExpandCollapse}" />
                        </Button.ToolTip>
                    </Button>
                </StackPanel>

                <Popup
                    x:Name="PasswordPopup"
                    AllowsTransparency="True"
                    Placement="Bottom"
                    PlacementTarget="{Binding ElementName=ConnectBtn}"
                    StaysOpen="False">
                    <Border
                        Margin="10"
                        Padding="10"
                        Background="{DynamicResource Background1}"
                        CornerRadius="10">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="15"
                                Opacity="0.2"
                                ShadowDepth="0"
                                Color="{DynamicResource AccentColor}" />
                        </Border.Effect>

                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    Text="{x:Static lang:Resources.Key}" />
                                <Border
                                    Width="100"
                                    Margin="10 3 10 3"
                                    Padding="3"
                                    VerticalAlignment="Center"
                                    Background="{DynamicResource CardBackground}"
                                    CornerRadius="5">
                                    <Border.Effect>
                                        <DropShadowEffect
                                            BlurRadius="15"
                                            Opacity="0.2"
                                            ShadowDepth="0"
                                            Color="{DynamicResource AccentColor}" />
                                    </Border.Effect>
                                    <PasswordBox
                                        x:Name="PasswordTxt"
                                        VerticalAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="{DynamicResource Foreground1}" />
                                </Border>
                            </StackPanel>
                            <Button
                                x:Name="ConnectPopupBtn"
                                Grid.Row="1"
                                Margin="5"
                                Padding="5 2"
                                HorizontalAlignment="Center"
                                Background="{DynamicResource LightAccent}"
                                Click="ConnectPopupBtn_Click"
                                Content="{x:Static lang:Resources.Connect}"
                                Cursor="Hand"
                                FontWeight="ExtraBold"
                                Foreground="{DynamicResource Accent}"
                                Style="{DynamicResource PrimaryButton}" />
                        </StackPanel>
                    </Border>
                </Popup>
            </Grid>
            <Grid
                x:Name="CollapseGrid"
                Grid.Row="1"
                d:Visibility="Visible"
                Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock FontWeight="Bold" Text="{x:Static lang:Resources.SignalQuality}" />
                <TextBlock
                    x:Name="StrengthTxt"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="15 0 0 0"
                    d:Text="OK"
                    FontWeight="Bold"
                    TextWrapping="Wrap" />

                <TextBlock
                    Grid.Row="1"
                    FontWeight="Bold"
                    Text="{x:Static lang:Resources.ProfileName}" />
                <TextBlock
                    x:Name="ProfileTxt"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="15 0 0 0"
                    d:Text="OK"
                    FontWeight="Bold"
                    TextWrapping="Wrap" />

                <TextBlock
                    Grid.Row="2"
                    FontWeight="Bold"
                    Text="{x:Static lang:Resources.Interface}" />
                <TextBlock
                    x:Name="InterfaceTxt"
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="15 0 0 0"
                    d:Text="OK"
                    FontWeight="Bold"
                    TextWrapping="Wrap" />

                <TextBlock
                    Grid.Row="3"
                    FontWeight="Bold"
                    Text="{x:Static lang:Resources.BssType}" />
                <TextBlock
                    x:Name="BSSTxt"
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="15 0 0 0"
                    d:Text="OK"
                    FontWeight="Bold"
                    TextWrapping="Wrap" />

                <TextBlock
                    Grid.Row="4"
                    FontWeight="Bold"
                    Text="{x:Static lang:Resources.SecurityEnabled}" />
                <TextBlock
                    x:Name="SecurityEnabledTxt"
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="15 0 0 0"
                    d:Text="OK"
                    FontWeight="Bold"
                    TextWrapping="Wrap" />

                <TextBlock
                    Grid.Row="5"
                    FontWeight="Bold"
                    Text="{x:Static lang:Resources.Channel}" />
                <TextBlock
                    x:Name="ChannelTxt"
                    Grid.Row="5"
                    Grid.Column="1"
                    Margin="15 0 0 0"
                    d:Text="OK"
                    FontWeight="Bold"
                    TextWrapping="Wrap" />

                <TextBlock
                    Grid.Row="6"
                    FontWeight="Bold"
                    Text="{x:Static lang:Resources.Band}" />
                <TextBlock
                    x:Name="BandTxt"
                    Grid.Row="6"
                    Grid.Column="1"
                    Margin="15 0 0 0"
                    d:Text="OK"
                    FontWeight="Bold"
                    TextWrapping="Wrap" />

                <TextBlock
                    Grid.Row="7"
                    FontWeight="Bold"
                    Text="{x:Static lang:Resources.Frequency}" />
                <TextBlock
                    x:Name="FrequencyTxt"
                    Grid.Row="7"
                    Grid.Column="1"
                    Margin="15 0 0 0"
                    d:Text="OK"
                    FontWeight="Bold"
                    TextWrapping="Wrap" />

            </Grid>
        </Grid>
    </Border>

</UserControl>

<Page
    x:Class="InternetTest.Pages.FirstRun.JumpInPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:InternetTest.Properties"
    xmlns:local="clr-namespace:InternetTest.Pages.FirstRun"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="JumpInPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="../../Fonts/#Hauora"
    Foreground="{DynamicResource Foreground1}"
    mc:Ignorable="d">
    <Page.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation
                        Storyboard.TargetName="TitleTxt"
                        Storyboard.TargetProperty="Opacity"
                        From="0"
                        To="1"
                        Duration="0:0:0.2" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>

    <Grid>
        <StackPanel
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock
                x:Name="TitleTxt"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="ExtraBold"
                Text="{x:Static lang:Resources.WelcomeReady}" />
            <Button
                x:Name="NextBtn"
                Margin="5 15"
                Padding="10 5"
                HorizontalAlignment="Center"
                Background="{DynamicResource Accent}"
                BorderThickness="0"
                Click="NextBtn_Click"
                Content="{x:Static lang:Resources.LetsGo}"
                Cursor="Hand"
                FontWeight="ExtraBold"
                Foreground="{DynamicResource WindowButtonsHoverForeground1}"
                Style="{DynamicResource PrimaryButton}" />

        </StackPanel>
    </Grid>
</Page>

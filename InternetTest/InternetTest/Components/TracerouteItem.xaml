<UserControl
    x:Class="InternetTest.Components.TracerouteItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:InternetTest.Properties"
    xmlns:local="clr-namespace:InternetTest.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignWidth="800"
    FontFamily="..\Fonts\#Hauora"
    Foreground="{DynamicResource Foreground1}"
    mc:Ignorable="d">
    <Border
        Margin="5"
        Padding="5"
        BorderBrush="{DynamicResource Border}"
        BorderThickness="1"
        CornerRadius="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Border
                Width="40"
                Height="40"
                VerticalAlignment="Center"
                Background="{DynamicResource Border}"
                CornerRadius="20">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    d:Text="1"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="{Binding Index}" />
            </Border>
            <TextBlock
                Grid.Column="1"
                Margin="10 0 0 0"
                VerticalAlignment="Center"
                d:Text="example.com"
                FontFamily="Consolas"
                FontSize="16"
                FontWeight="Bold"
                Text="{Binding Host}" />
            <Border
                Grid.Column="2"
                Margin="5 0"
                Padding="5 2"
                VerticalAlignment="Center"
                d:Background="{DynamicResource LightGreen}"
                Background="{Binding BackgroundBrush}"
                CornerRadius="5">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    d:Foreground="{DynamicResource ForegroundGreen}"
                    d:Text="29ms"
                    FontWeight="SemiBold"
                    Foreground="{Binding ForegroundBrush}"
                    Text="{Binding Duration}" />
            </Border>
        </Grid>
    </Border>
</UserControl>

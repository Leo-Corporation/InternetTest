<UserControl
    x:Class="InternetTest.Components.DnsCacheItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:InternetTest.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    BorderBrush="{DynamicResource Border}"
    BorderThickness="0 0 0 1"
    mc:Ignorable="d">
    <UserControl.Style>
        <Style TargetType="UserControl">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HoverBackground}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>
    <Border Padding="10 15" VerticalAlignment="Center">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock
                d:Text="Value"
                FontSize="14"
                Text="{Binding Entry}" />
            <TextBlock
                Grid.Column="1"
                d:Text="Value"
                FontSize="14"
                Text="{Binding RecordName}" />
            <TextBlock
                Grid.Column="2"
                d:Text="Value"
                FontSize="14"
                Text="{Binding RecordType}" />
            <TextBlock
                Grid.Column="3"
                d:Text="Value"
                FontSize="14"
                Text="{Binding Status}" />
            <TextBlock
                Grid.Column="4"
                d:Text="Value"
                FontSize="14"
                Text="{Binding Data}" />
        </Grid>
    </Border>
</UserControl>

<UserControl
    x:Class="InternetTest.Components.ConnectWiFiItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:InternetTest.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:InternetTest.Helpers"
    xmlns:lang="clr-namespace:InternetTest.Properties"
    xmlns:local="clr-namespace:InternetTest.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:InternetTest.ViewModels.Components"
    d:DesignWidth="800"
    FontFamily="..\Fonts\#Hauora"
    Foreground="{DynamicResource Foreground1}"
    mc:Ignorable="d">
    <Border
        Margin="5"
        Padding="5"
        Background="{DynamicResource CardBackground}"
        BorderBrush="{DynamicResource Border}"
        BorderThickness="1"
        CornerRadius="5">
        <Grid>
            <Grid.Resources>
                <BooleanToVisibilityConverter x:Key="BoolToVis" />
                <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis" />
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                x:Name="Icon"
                Margin="5 0"
                VerticalAlignment="Center"
                d:Foreground="{DynamicResource Green}"
                d:Text="&#xF8AC;"
                FontFamily="../Fonts/#FluentSystemIcons-Regular"
                FontSize="24"
                Foreground="{Binding StrengthColor}"
                Text="{Binding StrengthIcon}" />
            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                d:Text="WiFi Name"
                FontWeight="Bold"
                Text="{Binding Name}"
                Visibility="{Binding ConfidentialMode, Converter={StaticResource InverseBoolToVis}}" />
            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Text="•••••"
                Visibility="{Binding ConfidentialMode, Converter={StaticResource BoolToVis}}" />
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Border
                    Grid.Column="2"
                    Margin="5 0 0 0"
                    Padding="5 2"
                    VerticalAlignment="Center"
                    Background="{DynamicResource LightGreen}"
                    BorderThickness="1"
                    CornerRadius="5"
                    Visibility="{Binding IsConnected, Converter={StaticResource BoolToVis}}">
                    <TextBlock
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource ForegroundGreen}"
                        Text="{x:Static lang:Resources.ConnectedS}" />
                </Border>
                <Button
                    x:Name="ConnectBtn"
                    Margin="5 0"
                    Padding="5 2"
                    Background="{DynamicResource LightAccent}"
                    Command="{Binding ConnectCommand}"
                    Content="{x:Static lang:Resources.Connect}"
                    Cursor="Hand"
                    FontWeight="SemiBold"
                    Foreground="{DynamicResource DarkFAccent}"
                    Visibility="{Binding IsConnected, Converter={StaticResource InverseBoolToVis}}" />
                <Button
                    Margin="5 0"
                    Background="Transparent"
                    Command="{Binding CopyCommand}"
                    Content="&#xF32C;"
                    Cursor="Hand"
                    FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                    Foreground="{DynamicResource Foreground1}">
                    <Button.ToolTip>
                        <ToolTip Content="{x:Static lang:Resources.Copy}" />
                    </Button.ToolTip>
                </Button>
                <ToggleButton
                    x:Name="ExpandBtn"
                    Margin="5 0"
                    Background="Transparent"
                    FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                    Foreground="{DynamicResource Foreground1}"
                    Style="{DynamicResource ExpanderChevronButton}" />
            </StackPanel>
            <ItemsControl
                Grid.Row="1"
                Grid.ColumnSpan="5"
                ItemsSource="{Binding Details}"
                Visibility="{Binding ElementName=ExpandBtn, Path=IsChecked, Converter={StaticResource BoolToVis}}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                        </Grid>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="Grid.Row" Value="{Binding GridRow}" />
                        <Setter Property="Grid.Column" Value="{Binding GridColumn}" />
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:GridItemViewModel}">
                        <local:GridItem />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Popup
                x:Name="PasswordPopup"
                AllowsTransparency="True"
                IsOpen="{Binding PopupOpen}"
                Placement="Bottom"
                PlacementTarget="{Binding ElementName=ConnectBtn}"
                StaysOpen="False">
                <Border
                    Margin="10"
                    Padding="10"
                    Background="{DynamicResource Background1}"
                    CornerRadius="10">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="15"
                            Opacity="0.2"
                            ShadowDepth="0"
                            Color="{DynamicResource AccentColor}" />
                    </Border.Effect>
                    <StackPanel>
                        <StackPanel>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontWeight="Bold"
                                Text="{x:Static lang:Resources.Key}" />
                            <PasswordBox
                                x:Name="PasswordTxt"
                                Width="200"
                                Padding="5"
                                VerticalAlignment="Center"
                                helpers:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <Button
                            x:Name="ConnectPopupBtn"
                            Grid.Row="1"
                            Margin="5"
                            Padding="5 2"
                            HorizontalAlignment="Center"
                            Background="{DynamicResource LightAccent}"
                            Command="{Binding ConnectPopupCommand}"
                            Content="{x:Static lang:Resources.Connect}"
                            Cursor="Hand"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource Accent}" />
                    </StackPanel>
                </Border>
            </Popup>
        </Grid>
    </Border>
</UserControl>

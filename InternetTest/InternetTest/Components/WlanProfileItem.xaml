<UserControl
    x:Class="InternetTest.Components.WlanProfileItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:InternetTest.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:InternetTest.Properties"
    xmlns:local="clr-namespace:InternetTest.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:InternetTest.ViewModels.Components"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="..\Fonts\#Hauora"
    Foreground="{DynamicResource Foreground1}"
    mc:Ignorable="d">
    <Border
        Margin="5"
        Padding="5"
        Background="{DynamicResource CardBackground}"
        BorderBrush="{DynamicResource Border}"
        BorderThickness="1"
        CornerRadius="5">
        <Grid>
            <Grid.Resources>
                <BooleanToVisibilityConverter x:Key="BoolToVis" />
                <converters:BoolToStringConverter x:Key="BoolToString" />
                <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis" />
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                x:Name="Icon"
                Margin="5 0"
                VerticalAlignment="Center"
                FontFamily="../Fonts/#FluentSystemIcons-Regular"
                FontSize="24"
                Foreground="{DynamicResource Accent}"
                Text="&#xF8AC;" />
            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                d:Text="WiFi Name"
                FontWeight="Bold"
                Text="{Binding Name}"
                Visibility="{Binding ConfidentialMode, Converter={StaticResource InverseBoolToVis}}" />
            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Text="•••••"
                Visibility="{Binding ConfidentialMode, Converter={StaticResource BoolToVis}}" />
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button
                    x:Name="GetQrBtn"
                    Margin="5 0"
                    Background="Transparent"
                    Command="{Binding OpenQrCommand}"
                    Content="&#xF635;"
                    Cursor="Hand"
                    FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                    Foreground="{DynamicResource Foreground1}">
                    <Button.ToolTip>
                        <ToolTip Content="{x:Static lang:Resources.ShareWithQrCode}" />
                    </Button.ToolTip>
                </Button>
                <Button
                    Margin="5 0"
                    Background="Transparent"
                    Command="{Binding CopyCommand}"
                    Content="&#xF32C;"
                    Cursor="Hand"
                    FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                    Foreground="{DynamicResource Foreground1}">
                    <Button.ToolTip>
                        <ToolTip Content="{x:Static lang:Resources.Copy}" />
                    </Button.ToolTip>
                </Button>
                <ToggleButton
                    x:Name="ExpandBtn"
                    Margin="5 0"
                    Background="Transparent"
                    FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                    Foreground="{DynamicResource Foreground1}"
                    Style="{DynamicResource ExpanderChevronButton}" />
            </StackPanel>
            <ItemsControl
                Grid.Row="1"
                Grid.ColumnSpan="5"
                ItemsSource="{Binding Details}"
                Visibility="{Binding ElementName=ExpandBtn, Path=IsChecked, Converter={StaticResource BoolToVis}}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                        </Grid>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="Grid.Row" Value="{Binding GridRow}" />
                        <Setter Property="Grid.Column" Value="{Binding GridColumn}" />
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:GridItemViewModel}">
                        <local:GridItem />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <StackPanel
                Grid.Row="2"
                Grid.ColumnSpan="3"
                Margin="5"
                Visibility="{Binding ElementName=ExpandBtn, Path=IsChecked, Converter={StaticResource BoolToVis}}">
                <TextBlock
                    FontSize="12"
                    Foreground="{DynamicResource DarkGray}"
                    Text="{x:Static lang:Resources.Key}" />
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        FontSize="14"
                        FontWeight="SemiBold"
                        Text="{Binding Key}" />
                    <ToggleButton
                        Margin="5 0"
                        Background="Transparent"
                        Content="{Binding KeyVisible, Converter={StaticResource BoolToString}, Mode=TwoWay, ConverterParameter='&#xF3F8;,&#xF3FC;'}"
                        Cursor="Hand"
                        FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                        Foreground="{DynamicResource Foreground1}"
                        IsChecked="{Binding KeyVisible}">
                        <ToggleButton.ToolTip>
                            <ToolTip Content="{x:Static lang:Resources.ShowHideKey}" />
                        </ToggleButton.ToolTip>
                    </ToggleButton>
                    <Button
                        Margin="5 0"
                        Background="Transparent"
                        Command="{Binding CopyKeyCommand}"
                        Content="&#xF32C;"
                        Cursor="Hand"
                        FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                        Foreground="{DynamicResource Foreground1}">
                        <Button.ToolTip>
                            <ToolTip Content="{x:Static lang:Resources.Copy}" />
                        </Button.ToolTip>
                    </Button>
                </StackPanel>
            </StackPanel>
            <Popup
                x:Name="QrPopup"
                Width="200"
                Height="230"
                AllowsTransparency="True"
                IsOpen="{Binding QrOpen}"
                Placement="Center"
                PlacementTarget="{Binding ElementName=GetQrBtn}"
                PopupAnimation="Fade">
                <Border
                    Margin="10"
                    Padding="5"
                    Background="{DynamicResource Background1}"
                    CornerRadius="5">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="10"
                            Opacity="0.4"
                            RenderingBias="Performance"
                            ShadowDepth="0"
                            Color="Black" />
                    </Border.Effect>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image x:Name="QrImage" Source="{Binding QrCodeImage}" />
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <Button
                                x:Name="SaveQrBtn"
                                Margin="0 0 5 0"
                                Padding="3"
                                Background="{DynamicResource LightAccent}"
                                Command="{Binding SaveQrCommand}"
                                Content="{x:Static lang:Resources.Save}"
                                FontWeight="Bold"
                                Foreground="{DynamicResource Accent}" />
                            <Button
                                x:Name="CloseQrBtn"
                                Padding="3"
                                Background="{DynamicResource CardBackground}"
                                Command="{Binding CloseQrCommand}"
                                Content="{x:Static lang:Resources.Close}"
                                FontWeight="Bold"
                                Foreground="{DynamicResource Foreground1}" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Popup>
        </Grid>
    </Border>
</UserControl>

<UserControl
    x:Class="InternetTest.Components.Sidebar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:InternetTest.Properties"
    xmlns:local="clr-namespace:InternetTest.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    d:DesignHeight="550"
    d:DesignWidth="300"
    FontFamily="..\Fonts\#Hauora"
    Foreground="{DynamicResource Foreground1}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>
    <Border
        Margin="10"
        Padding="10"
        Background="{DynamicResource SidebarBackground}"
        BorderBrush="{DynamicResource Border}"
        BorderThickness="1"
        CornerRadius="6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <RadioButton
                Padding="5"
                HorizontalContentAlignment="Stretch"
                Background="Transparent"
                Command="{Binding HomePageCommand}"
                GroupName="Sidebar"
                Style="{DynamicResource SidebarButton}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Border
                        Width="40"
                        Height="40"
                        Margin="5"
                        Padding="5"
                        Background="{DynamicResource Accent}"
                        CornerRadius="10">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Filled"
                            FontSize="20"
                            Foreground="{DynamicResource WindowButtonsHoverForeground1}"
                            Text="&#xF488;" />
                    </Border>
                    <StackPanel
                        Grid.Column="1"
                        Margin="10 0 0 0"
                        VerticalAlignment="Center">
                        <TextBlock
                            FontSize="16"
                            FontWeight="Bold"
                            Text="{x:Static lang:Resources.InternetTest}" />
                        <TextBlock Text="{x:Static lang:Resources.Home}" />
                    </StackPanel>
                </Grid>
            </RadioButton>
            <TextBlock
                Grid.Row="1"
                Margin="0 10"
                FontWeight="SemiBold"
                Foreground="{DynamicResource Foreground2}"
                Text="{x:Static lang:Resources.Tools}" />

            <StackPanel Grid.Row="2">
                <ToggleButton
                    x:Name="WebUtilsBtn"
                    Padding="5"
                    HorizontalContentAlignment="Left"
                    Background="Transparent"
                    Style="{DynamicResource SidebarChevronButton}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            FontSize="16"
                            Text="&#xF45B;" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="10 0 0 0"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="{x:Static lang:Resources.WebUtilities}" />

                    </StackPanel>
                </ToggleButton>
                <Grid Visibility="{Binding IsChecked, ElementName=WebUtilsBtn, Converter={StaticResource BoolToVis}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Rectangle
                        Width="1"
                        Margin="13 0 12 0"
                        Fill="{DynamicResource Border}"
                        RadiusX="1"
                        RadiusY="1" />
                    <StackPanel Grid.Column="1">
                        <RadioButton
                            Grid.Row="4"
                            Padding="5"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            Content="{x:Static lang:Resources.DownDetector}"
                            GroupName="Sidebar"
                            Style="{DynamicResource SidebarButton}" />
                        <RadioButton
                            Grid.Row="4"
                            Padding="5"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            Content="{x:Static lang:Resources.DNSTool}"
                            GroupName="Sidebar"
                            Style="{DynamicResource SidebarButton}" />
                        <RadioButton
                            Grid.Row="4"
                            Padding="5"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            Command="{Binding WiFiPageCommand}"
                            Content="{x:Static lang:Resources.WiFi}"
                            GroupName="Sidebar"
                            Style="{DynamicResource SidebarButton}" />
                    </StackPanel>
                </Grid>
                <ToggleButton
                    x:Name="IpBtn"
                    Padding="5"
                    HorizontalContentAlignment="Left"
                    Background="Transparent"
                    Style="{DynamicResource SidebarChevronButton}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            FontSize="16"
                            Text="&#xF4F9;" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="10 0 0 0"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="{x:Static lang:Resources.IPTools}" />

                    </StackPanel>
                </ToggleButton>
                <Grid Visibility="{Binding IsChecked, ElementName=IpBtn, Converter={StaticResource BoolToVis}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Rectangle
                        Width="1"
                        Margin="13 0 12 0"
                        Fill="{DynamicResource Border}"
                        RadiusX="1"
                        RadiusY="1" />
                    <StackPanel Grid.Column="1">
                        <RadioButton
                            Grid.Row="4"
                            Padding="5"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            Command="{Binding LocateIpPageCommand}"
                            Content="{x:Static lang:Resources.LocateIP}"
                            GroupName="Sidebar"
                            Style="{DynamicResource SidebarButton}" />
                        <RadioButton
                            Grid.Row="4"
                            Padding="5"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            Command="{Binding IpConfigPageCommand}"
                            Content="{x:Static lang:Resources.IPConfig}"
                            GroupName="Sidebar"
                            Style="{DynamicResource SidebarButton}" />
                    </StackPanel>
                </Grid>
                <ToggleButton
                    x:Name="CommandBtn"
                    Padding="5"
                    HorizontalContentAlignment="Left"
                    Background="Transparent"
                    Style="{DynamicResource SidebarChevronButton}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            FontSize="16"
                            Text="&#xF8B9;" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="10 0 0 0"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="{x:Static lang:Resources.Commands}" />

                    </StackPanel>
                </ToggleButton>
                <Grid Visibility="{Binding IsChecked, ElementName=CommandBtn, Converter={StaticResource BoolToVis}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Rectangle
                        Width="1"
                        Margin="13 0 12 0"
                        Fill="{DynamicResource Border}"
                        RadiusX="1"
                        RadiusY="1" />
                    <StackPanel Grid.Column="1">
                        <RadioButton
                            Grid.Row="4"
                            Padding="5"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            Command="{Binding PingPageCommand}"
                            Content="{x:Static lang:Resources.Ping}"
                            GroupName="Sidebar"
                            Style="{DynamicResource SidebarButton}" />
                        <RadioButton
                            Grid.Row="4"
                            Padding="5"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            Command="{Binding RequestsPageCommand}"
                            Content="{x:Static lang:Resources.Requests}"
                            GroupName="Sidebar"
                            Style="{DynamicResource SidebarButton}" />
                        <RadioButton
                            Grid.Row="4"
                            Padding="5"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            Command="{Binding TraceroutePageCommand}"
                            Content="{x:Static lang:Resources.TraceRoute}"
                            GroupName="Sidebar"
                            Style="{DynamicResource SidebarButton}" />
                    </StackPanel>
                </Grid>
            </StackPanel>

            <RadioButton
                Grid.Row="4"
                Padding="5"
                HorizontalContentAlignment="Left"
                Background="Transparent"
                Command="{Binding SettingsPageCommand}"
                GroupName="Sidebar"
                Style="{DynamicResource SidebarButton}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                        FontSize="16"
                        Text="&#xF6AA;" />
                    <TextBlock
                        Margin="10 0 0 0"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="{x:Static lang:Resources.Settings}" />
                </StackPanel>
            </RadioButton>
        </Grid>
    </Border>
</UserControl>

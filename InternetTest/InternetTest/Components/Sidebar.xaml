<UserControl
    x:Class="InternetTest.Components.Sidebar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:InternetTest.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enums="clr-namespace:InternetTest.Enums"
    xmlns:lang="clr-namespace:InternetTest.Properties"
    xmlns:local="clr-namespace:InternetTest.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    d:DesignHeight="550"
    d:DesignWidth="300"
    FontFamily="..\Fonts\#Hauora"
    Foreground="{DynamicResource Foreground1}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <converters:EnumToBoolConverter x:Key="EnumToBool" />
    </UserControl.Resources>
    <Border
        Margin="10"
        Padding="10"
        Background="{DynamicResource SidebarBackground}"
        BorderBrush="{DynamicResource Border}"
        BorderThickness="1"
        CornerRadius="6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <RadioButton
                Padding="5"
                HorizontalContentAlignment="Stretch"
                Background="Transparent"
                Command="{Binding HomePageCommand}"
                GroupName="Sidebar"
                IsChecked="{Binding DefaultPage, Converter={StaticResource EnumToBool}, ConverterParameter={x:Static enums:AppPages.Home}}"
                Style="{DynamicResource SidebarButton}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Border
                        Width="40"
                        Height="40"
                        Margin="5"
                        Padding="5"
                        Background="{DynamicResource Accent}"
                        CornerRadius="10">
                        <TextBlock
                            x:Name="HomeIconTxt"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Filled"
                            FontSize="20"
                            Foreground="{DynamicResource WindowButtonsHoverForeground1}"
                            Text="&#xF488;" />
                    </Border>
                    <StackPanel
                        Grid.Column="1"
                        Margin="10 0 0 0"
                        VerticalAlignment="Center">
                        <TextBlock
                            FontSize="16"
                            FontWeight="Bold"
                            Text="{x:Static lang:Resources.InternetTest}" />
                        <TextBlock Text="{x:Static lang:Resources.Home}" />
                    </StackPanel>
                </Grid>
                <RadioButton.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetName="HomeIconTxt"
                                    Storyboard.TargetProperty="FontSize"
                                    From="12"
                                    To="18"
                                    Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </RadioButton.Triggers>
            </RadioButton>
            <TextBlock
                Grid.Row="1"
                Margin="0 10"
                FontWeight="SemiBold"
                Foreground="{DynamicResource Foreground2}"
                Text="{x:Static lang:Resources.Tools}" />

            <StackPanel Grid.Row="2">
                <ToggleButton
                    x:Name="WebUtilsBtn"
                    Height="30"
                    Padding="5"
                    HorizontalContentAlignment="Left"
                    Background="Transparent"
                    Style="{DynamicResource SidebarChevronButton}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            x:Name="UtilIconTxt"
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            FontSize="16"
                            RenderTransformOrigin="0.5,0.5"
                            Text="&#xF45B;">
                            <TextBlock.RenderTransform>
                                <TransformGroup>
                                    <RotateTransform x:Name="UtilRotator" Angle="0" />
                                </TransformGroup>
                            </TextBlock.RenderTransform>
                        </TextBlock>
                        <TextBlock
                            Grid.Column="1"
                            Margin="10 0 0 0"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="{x:Static lang:Resources.WebUtilities}" />

                    </Grid>
                    <ToggleButton.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimationUsingKeyFrames
                                        BeginTime="00:00:00"
                                        Storyboard.TargetName="UtilIconTxt"
                                        Storyboard.TargetProperty="Margin">
                                        <SplineThicknessKeyFrame KeyTime="00:00:00" Value="20,0,0,0" />
                                        <SplineThicknessKeyFrame KeyTime="00:00:0.3" Value="0" />
                                    </ThicknessAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ToggleButton.Triggers>
                </ToggleButton>
                <Grid Visibility="{Binding IsChecked, ElementName=WebUtilsBtn, Converter={StaticResource BoolToVis}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Rectangle
                        Width="1"
                        Margin="13 0 12 0"
                        Fill="{DynamicResource Border}"
                        RadiusX="1"
                        RadiusY="1" />
                    <StackPanel Grid.Column="1">
                        <RadioButton
                            Grid.Row="4"
                            Padding="5"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            Command="{Binding DownDetectorCommand}"
                            Content="{x:Static lang:Resources.DownDetector}"
                            GroupName="Sidebar"
                            IsChecked="{Binding DefaultPage, Converter={StaticResource EnumToBool}, ConverterParameter={x:Static enums:AppPages.DownDetector}}"
                            Style="{DynamicResource SidebarButton}" />
                        <RadioButton
                            Grid.Row="4"
                            Padding="5"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            Content="{x:Static lang:Resources.DNSTool}"
                            GroupName="Sidebar"
                            IsChecked="{Binding DefaultPage, Converter={StaticResource EnumToBool}, ConverterParameter={x:Static enums:AppPages.DnsTool}}"
                            Style="{DynamicResource SidebarButton}" />
                        <RadioButton
                            Grid.Row="4"
                            Padding="5"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            Command="{Binding WiFiPageCommand}"
                            Content="{x:Static lang:Resources.WiFi}"
                            GroupName="Sidebar"
                            IsChecked="{Binding DefaultPage, Converter={StaticResource EnumToBool}, ConverterParameter={x:Static enums:AppPages.WiFiNetworks}}"
                            Style="{DynamicResource SidebarButton}" />
                    </StackPanel>
                </Grid>
                <ToggleButton
                    x:Name="IpBtn"
                    Height="30"
                    Padding="5"
                    HorizontalContentAlignment="Left"
                    Background="Transparent"
                    Style="{DynamicResource SidebarChevronButton}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            x:Name="IPIconTxt"
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            FontSize="16"
                            RenderTransformOrigin="0.5,0.5"
                            Text="&#xF4F9;">
                            <TextBlock.RenderTransform>
                                <TransformGroup>
                                    <RotateTransform x:Name="IPRotator" Angle="0" />
                                </TransformGroup>
                            </TextBlock.RenderTransform>
                        </TextBlock>
                        <TextBlock
                            Grid.Column="1"
                            Margin="10 0 0 0"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="{x:Static lang:Resources.IPTools}" />

                    </Grid>
                    <ToggleButton.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimationUsingKeyFrames
                                        BeginTime="00:00:00"
                                        Storyboard.TargetName="IPIconTxt"
                                        Storyboard.TargetProperty="Margin">
                                        <SplineThicknessKeyFrame KeyTime="00:00:00" Value="0,0,0,20" />
                                        <SplineThicknessKeyFrame KeyTime="00:00:0.3" Value="0" />
                                    </ThicknessAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ToggleButton.Triggers>
                </ToggleButton>
                <Grid Visibility="{Binding IsChecked, ElementName=IpBtn, Converter={StaticResource BoolToVis}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Rectangle
                        Width="1"
                        Margin="13 0 12 0"
                        Fill="{DynamicResource Border}"
                        RadiusX="1"
                        RadiusY="1" />
                    <StackPanel Grid.Column="1">
                        <RadioButton
                            Grid.Row="4"
                            Padding="5"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            Command="{Binding LocateIpPageCommand}"
                            Content="{x:Static lang:Resources.LocateIP}"
                            GroupName="Sidebar"
                            IsChecked="{Binding DefaultPage, Converter={StaticResource EnumToBool}, ConverterParameter={x:Static enums:AppPages.LocateIP}}"
                            Style="{DynamicResource SidebarButton}" />
                        <RadioButton
                            Grid.Row="4"
                            Padding="5"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            Command="{Binding IpConfigPageCommand}"
                            Content="{x:Static lang:Resources.IPConfig}"
                            GroupName="Sidebar"
                            IsChecked="{Binding DefaultPage, Converter={StaticResource EnumToBool}, ConverterParameter={x:Static enums:AppPages.IPConfig}}"
                            Style="{DynamicResource SidebarButton}" />
                    </StackPanel>
                </Grid>
                <ToggleButton
                    x:Name="CommandBtn"
                    Height="30"
                    Padding="5"
                    HorizontalContentAlignment="Left"
                    Background="Transparent"
                    Style="{DynamicResource SidebarChevronButton}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            x:Name="ComIconTxt"
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            FontSize="16"
                            RenderTransformOrigin="0.5,0.5"
                            Text="&#xF8B9;">
                            <TextBlock.RenderTransform>
                                <TransformGroup>
                                    <RotateTransform x:Name="ComIconRotator" Angle="0" />
                                </TransformGroup>
                            </TextBlock.RenderTransform>
                        </TextBlock>
                        <TextBlock
                            Grid.Column="1"
                            Margin="10 0 0 0"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="{x:Static lang:Resources.Commands}" />

                    </Grid>
                    <ToggleButton.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        Storyboard.TargetName="ComIconTxt"
                                        Storyboard.TargetProperty="FontSize"
                                        From="4"
                                        To="16"
                                        Duration="0:0:0.2" />
                                    <DoubleAnimation
                                        Storyboard.TargetName="ComIconRotator"
                                        Storyboard.TargetProperty="Angle"
                                        From="180"
                                        To="0"
                                        Duration="0:0:0.2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ToggleButton.Triggers>
                </ToggleButton>
                <Grid Visibility="{Binding IsChecked, ElementName=CommandBtn, Converter={StaticResource BoolToVis}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Rectangle
                        Width="1"
                        Margin="13 0 12 0"
                        Fill="{DynamicResource Border}"
                        RadiusX="1"
                        RadiusY="1" />
                    <StackPanel Grid.Column="1">
                        <RadioButton
                            Grid.Row="4"
                            Padding="5"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            Command="{Binding PingPageCommand}"
                            Content="{x:Static lang:Resources.Ping}"
                            GroupName="Sidebar"
                            IsChecked="{Binding DefaultPage, Converter={StaticResource EnumToBool}, ConverterParameter={x:Static enums:AppPages.Ping}}"
                            Style="{DynamicResource SidebarButton}" />
                        <RadioButton
                            Grid.Row="4"
                            Padding="5"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            Command="{Binding RequestsPageCommand}"
                            Content="{x:Static lang:Resources.Requests}"
                            GroupName="Sidebar"
                            IsChecked="{Binding DefaultPage, Converter={StaticResource EnumToBool}, ConverterParameter={x:Static enums:AppPages.Requests}}"
                            Style="{DynamicResource SidebarButton}" />
                        <RadioButton
                            Grid.Row="4"
                            Padding="5"
                            HorizontalContentAlignment="Left"
                            Background="Transparent"
                            Command="{Binding TraceroutePageCommand}"
                            Content="{x:Static lang:Resources.TraceRoute}"
                            GroupName="Sidebar"
                            IsChecked="{Binding DefaultPage, Converter={StaticResource EnumToBool}, ConverterParameter={x:Static enums:AppPages.TraceRoute}}"
                            Style="{DynamicResource SidebarButton}" />
                    </StackPanel>
                </Grid>
            </StackPanel>

            <RadioButton
                Grid.Row="4"
                Height="30"
                Padding="5"
                HorizontalContentAlignment="Left"
                Background="Transparent"
                Command="{Binding SettingsPageCommand}"
                GroupName="Sidebar"
                Style="{DynamicResource SidebarButton}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                        FontSize="16"
                        RenderTransformOrigin="0.5,0.5"
                        Text="&#xF6AA;">
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <RotateTransform x:Name="SettingsRotator" Angle="0" />
                            </TransformGroup>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBlock
                        Margin="10 0 0 0"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="{x:Static lang:Resources.Settings}" />
                </StackPanel>
                <RadioButton.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetName="SettingsRotator"
                                    Storyboard.TargetProperty="Angle"
                                    From="360"
                                    To="0"
                                    Duration="0:0:0.4" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </RadioButton.Triggers>
            </RadioButton>
        </Grid>
    </Border>
</UserControl>

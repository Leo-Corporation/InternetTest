<UserControl
    x:Class="InternetTest.Views.DownDetectorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:InternetTest.Components"
    xmlns:converters="clr-namespace:InternetTest.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:InternetTest.Properties"
    xmlns:local="clr-namespace:InternetTest.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:InternetTest.ViewModels.Components"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="..\Fonts\#Hauora"
    Foreground="{DynamicResource Foreground1}"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis" />
            <converters:InverseBoolConverter x:Key="InverseBool" />
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="6">
            <TextBlock
                Margin="10 5"
                FontSize="24"
                FontWeight="Bold"
                Text="{x:Static lang:Resources.DownDetector}" />
            <TextBlock
                Margin="10 0"
                FontSize="14"
                Text="{x:Static lang:Resources.DownDetectorDesc}"
                TextWrapping="Wrap" />
        </StackPanel>
        <Border
            Grid.Row="1"
            Margin="10"
            Padding="10"
            Background="{DynamicResource CardBackground}"
            BorderBrush="{DynamicResource Border}"
            BorderThickness="1"
            CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                        FontSize="16"
                        Text="&#xF10A;" />
                    <TextBlock
                        Margin="5 0 0 0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="{x:Static lang:Resources.AddSite}" />
                </StackPanel>
                <TextBlock
                    Grid.Row="1"
                    Margin="0 5 0 0"
                    FontWeight="SemiBold"
                    Text="{x:Static lang:Resources.URL}" />
                <TextBox
                    Grid.Row="2"
                    Margin="0 5"
                    Padding="5"
                    VerticalContentAlignment="Center"
                    Text="{Binding Site, UpdateSourceTrigger=PropertyChanged}" />
                <StackPanel
                    Grid.Row="3"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
                    <Button
                        Padding="5"
                        Background="{DynamicResource LightAccent}"
                        Command="{Binding AddWebsiteCommand}"
                        Content="{x:Static lang:Resources.AddSite}"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource DarkFAccent}"
                        IsEnabled="{Binding IsTesting, Converter={StaticResource InverseBool}}" />
                    <Button
                        Margin="10 0"
                        Padding="5"
                        Background="{DynamicResource Accent}"
                        Command="{Binding TestWebsitesCommand}"
                        Content="{x:Static lang:Resources.TestAll}"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource WindowButtonsHoverForeground1}"
                        IsEnabled="{Binding IsTesting, Converter={StaticResource InverseBool}}" />
                </StackPanel>
            </Grid>
        </Border>
        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="10"
            Padding="10"
            Background="{DynamicResource CardBackground}"
            BorderBrush="{DynamicResource Border}"
            BorderThickness="1"
            CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            FontSize="16"
                            Text="&#xF827;" />
                        <TextBlock
                            Margin="5 0 0 0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="Bold"
                            Text="{x:Static lang:Resources.ScheduledTests}" />
                    </StackPanel>
                    <TextBlock
                        Foreground="{DynamicResource DarkGray}"
                        Text="{x:Static lang:Resources.TimerDesc}"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel
                    Grid.Row="1"
                    Orientation="Horizontal"
                    Visibility="{Binding IsScheduledInProgress, Converter={StaticResource InverseBoolToVis}}">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="{x:Static lang:Resources.Interval}" />
                    <TextBox
                        Grid.Row="2"
                        Width="40"
                        Margin="5"
                        Padding="5"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Text="{Binding TimeInterval, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="{x:Static lang:Resources.SecondsLower}" />
                </StackPanel>
                <TextBlock
                    Grid.Row="1"
                    Margin="0 5 0 0"
                    VerticalAlignment="Center"
                    FontWeight="SemiBold"
                    Text="{Binding ScheduledText}"
                    Visibility="{Binding IsScheduledInProgress, Converter={StaticResource BoolToVis}}" />
                <Button
                    Grid.Row="3"
                    Padding="5"
                    HorizontalAlignment="Left"
                    d:Content="{x:Static lang:Resources.LaunchScheduledTest}"
                    Background="{DynamicResource LightAccent}"
                    Command="{Binding LaunchScheduledCommand}"
                    Content="{Binding ScheduledButtonText}"
                    FontWeight="SemiBold"
                    Foreground="{DynamicResource DarkFAccent}" />
            </Grid>
        </Border>
        <Border
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="10"
            Padding="10"
            Background="{DynamicResource CardBackground}"
            BorderBrush="{DynamicResource Border}"
            BorderThickness="1"
            CornerRadius="10"
            Visibility="{Binding HasWebsites, Converter={StaticResource BoolToVis}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.ColumnSpan="2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            FontSize="16"
                            Text="&#xF606;" />
                        <TextBlock
                            Margin="5 0 0 0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="Bold"
                            Text="{x:Static lang:Resources.Websites}" />
                    </StackPanel>
                    <TextBlock
                        Foreground="{DynamicResource DarkGray}"
                        Text="{x:Static lang:Resources.WebsitesDesc}"
                        TextWrapping="Wrap" />
                </StackPanel>
                <Button
                    Grid.Column="1"
                    Padding="5"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    Command="{Binding ClearCommand}"
                    Content="&#xF9F0;"
                    Cursor="Hand"
                    FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                    Foreground="{DynamicResource Foreground1}">
                    <Button.ToolTip>
                        <ToolTip Content="{x:Static lang:Resources.Clear}" />
                    </Button.ToolTip>
                </Button>
                <ItemsControl
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    ItemsSource="{Binding Websites}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type vm:WebsiteItemViewModel}">
                            <components:WebsiteItem />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>
        <StackPanel
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="20"
            VerticalAlignment="Center"
            Visibility="{Binding HasWebsites, Converter={StaticResource InverseBoolToVis}}">
            <TextBlock
                HorizontalAlignment="Center"
                FontFamily="../Fonts/#FluentSystemIcons-Regular"
                FontSize="48"
                Text="&#xF45C;" />
            <TextBlock
                HorizontalAlignment="Center"
                Text="{x:Static lang:Resources.DownDetectorPlaceHolder}"
                TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</UserControl>

<UserControl
    x:Class="InternetTest.Views.RequestsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:InternetTest.Components"
    xmlns:converters="clr-namespace:InternetTest.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:InternetTest.Helpers"
    xmlns:lang="clr-namespace:InternetTest.Properties"
    xmlns:local="clr-namespace:InternetTest.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:InternetTest.ViewModels.Components"
    d:DesignHeight="850"
    d:DesignWidth="800"
    FontFamily="..\Fonts\#Hauora"
    Foreground="{DynamicResource Foreground1}"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis" />
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.ColumnSpan="6">
            <TextBlock
                Margin="10 5"
                FontSize="24"
                FontWeight="Bold"
                Text="{x:Static lang:Resources.Requests}" />
            <TextBlock
                Margin="10 0"
                FontSize="14"
                Text="{x:Static lang:Resources.RequestsDesc}"
                TextWrapping="Wrap" />
        </StackPanel>
        <Border
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="10"
            Padding="10"
            Background="{DynamicResource CardBackground}"
            BorderBrush="{DynamicResource Border}"
            BorderThickness="1"
            CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.ColumnSpan="2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            FontSize="16"
                            Text="&#xF6AA;" />
                        <TextBlock
                            Margin="5 0 0 0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="Bold"
                            Text="{x:Static lang:Resources.RequestSettings}" />
                    </StackPanel>
                    <TextBlock Foreground="{DynamicResource DarkGray}" Text="{x:Static lang:Resources.RequestSettingsDesc}" />
                </StackPanel>
                <ComboBox
                    x:Name="RequestTypeComboBox"
                    Grid.Row="1"
                    Margin="0 10 10 10"
                    Padding="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderBrush="{DynamicResource Accent}"
                    BorderThickness="2"
                    FontWeight="SemiBold"
                    SelectedIndex="{Binding RequestType, Mode=TwoWay}">
                    <ComboBoxItem Content="GET" Foreground="{DynamicResource Green}" />
                    <ComboBoxItem Content="POST" Foreground="{DynamicResource Accent}" />
                    <ComboBoxItem Content="PUT" Foreground="{DynamicResource Orange}" />
                    <ComboBoxItem Content="DELETE" Foreground="{DynamicResource Red}" />
                    <ComboBoxItem Content="HEAD" Foreground="DarkCyan" />
                    <ComboBoxItem Content="OPTIONS" Foreground="{DynamicResource DarkGray}" />
                    <ComboBoxItem Content="PATCH" Foreground="BlueViolet" />
                    <ComboBoxItem Content="MERGE" Foreground="RosyBrown" />
                    <ComboBoxItem Content="COPY" Foreground="{DynamicResource Foreground1}" />
                </ComboBox>
                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0 10"
                    Padding="5"
                    VerticalAlignment="Center"
                    Text="{Binding Url, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <StackPanel Grid.Row="2" Grid.ColumnSpan="2">
                    <TextBlock FontWeight="SemiBold" Text="{x:Static lang:Resources.Body}" />
                    <ComboBox
                        x:Name="BodyTypeComboBox"
                        Width="200"
                        Margin="0 5"
                        HorizontalAlignment="Left"
                        Foreground="{DynamicResource Foreground1}"
                        SelectedIndex="{Binding BodyType, Mode=TwoWay}">
                        <ComboBoxItem Content="{x:Static lang:Resources.None}" />
                        <ComboBoxItem Content="Text" />
                        <ComboBoxItem Content="JavaScript" />
                        <ComboBoxItem Content="JSON" />
                        <ComboBoxItem Content="HTML" />
                        <ComboBoxItem Content="XML" />
                    </ComboBox>
                    <TextBox
                        Height="100"
                        Margin="0 5"
                        Padding="5"
                        AcceptsReturn="True"
                        FontFamily="Consolas"
                        Text="{Binding Body, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap"
                        Visibility="{Binding BodyVisibility}" />
                    <TextBlock FontWeight="SemiBold" Text="{x:Static lang:Resources.AuthType}" />
                    <ComboBox
                        x:Name="AuthTypeComboBox"
                        Width="200"
                        Margin="0 5"
                        HorizontalAlignment="Left"
                        Foreground="{DynamicResource Foreground1}"
                        SelectedIndex="{Binding AuthType, Mode=TwoWay}">
                        <ComboBoxItem Content="{x:Static lang:Resources.None}" />
                        <ComboBoxItem Content="Basic" />
                        <ComboBoxItem Content="{x:Static lang:Resources.Bearer}" />
                    </ComboBox>
                    <StackPanel Visibility="{Binding BasicVisibility}">
                        <TextBlock
                            Margin="0 5"
                            FontWeight="SemiBold"
                            Text="{x:Static lang:Resources.Token}" />
                        <TextBox
                            Width="200"
                            Padding="5"
                            HorizontalAlignment="Left"
                            Text="{Binding AuthToken, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel Visibility="{Binding BearerVisibility}">
                        <TextBlock
                            Margin="0 5"
                            FontWeight="SemiBold"
                            Text="{x:Static lang:Resources.Username}" />
                        <TextBox
                            Width="200"
                            Padding="5"
                            HorizontalAlignment="Left"
                            Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock
                            Margin="0 5"
                            FontWeight="SemiBold"
                            Text="{x:Static lang:Resources.Password}" />
                        <PasswordBox
                            Width="200"
                            Padding="5"
                            HorizontalAlignment="Left"
                            helpers:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </StackPanel>
                <Button
                    Grid.Row="3"
                    Grid.ColumnSpan="2"
                    Margin="0 10 0 0"
                    Padding="10 5"
                    HorizontalAlignment="Left"
                    Background="{DynamicResource Accent}"
                    Command="{Binding SendRequestCommand}"
                    Content="{x:Static lang:Resources.Send}"
                    FontWeight="SemiBold"
                    Foreground="{DynamicResource WindowButtonsHoverForeground1}" />
            </Grid>
        </Border>
        <Border
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="10"
            Padding="10"
            Background="{DynamicResource CardBackground}"
            BorderBrush="{DynamicResource Border}"
            BorderThickness="1"
            CornerRadius="10"
            Visibility="{Binding ResponseVisible, Converter={StaticResource BoolToVis}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.ColumnSpan="2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            FontSize="16"
                            Text="&#xF67A;" />
                        <TextBlock
                            Margin="5 0 0 0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="Bold"
                            Text="{x:Static lang:Resources.Response}" />
                    </StackPanel>
                    <TextBlock
                        d:Text="Status."
                        Foreground="{DynamicResource DarkGray}"
                        Text="{Binding ResponseStatus}" />
                </StackPanel>
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <RadioButton
                        x:Name="BodyTabBtn"
                        Padding="5"
                        Background="Transparent"
                        Content="{x:Static lang:Resources.Body}"
                        Foreground="{DynamicResource Foreground1}"
                        GroupName="Tab"
                        IsChecked="True"
                        Style="{DynamicResource Tab}" />
                    <RadioButton
                        x:Name="HeadersTabBtn"
                        Margin="10 0"
                        Padding="5"
                        Background="Transparent"
                        Content="{x:Static lang:Resources.Headers}"
                        Foreground="{DynamicResource Foreground1}"
                        GroupName="Tab"
                        Style="{DynamicResource Tab}" />
                </StackPanel>
                <Grid
                    x:Name="BodyTab"
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Visibility="{Binding ElementName=BodyTabBtn, Path=IsChecked, Converter={StaticResource BoolToVis}}">
                    <TextBox
                        Padding="5"
                        FontFamily="Consolas"
                        Text="{Binding ResponseText}" />
                </Grid>
                <Grid
                    x:Name="HeadersTab"
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Visibility="{Binding ElementName=HeadersTabBtn, Path=IsChecked, Converter={StaticResource BoolToVis}}">
                    <ItemsControl
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        ItemsSource="{Binding Headers}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:HeaderItemViewModel}">
                                <components:HeaderItem />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>

            </Grid>
        </Border>
        <StackPanel
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="20"
            VerticalAlignment="Center"
            Visibility="{Binding ResponseVisible, Converter={StaticResource InverseBoolToVis}}">
            <TextBlock
                HorizontalAlignment="Center"
                FontFamily="../Fonts/#FluentSystemIcons-Regular"
                FontSize="48"
                Text="&#xF4A4;" />
            <TextBlock
                HorizontalAlignment="Center"
                Text="{x:Static lang:Resources.NothingToShow}"
                TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</UserControl>

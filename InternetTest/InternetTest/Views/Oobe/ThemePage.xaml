<UserControl
    x:Class="InternetTest.Views.Oobe.ThemePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:InternetTest.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enums="clr-namespace:InternetTest.Enums"
    xmlns:lang="clr-namespace:InternetTest.Properties"
    xmlns:local="clr-namespace:InternetTest.Views.Oobe"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="../../Fonts/#Hauora"
    Foreground="{DynamicResource Foreground1}"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <converters:EnumToBoolConverter x:Key="EnumToBoolConverter" />
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="ExtraBold"
                Text="{x:Static lang:Resources.Theme}" />
            <TextBlock HorizontalAlignment="Center" Text="{x:Static lang:Resources.ChangeTheme}" />
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <RadioButton
                    BorderThickness="2"
                    Command="{Binding LightThemeCommand}"
                    GroupName="Theme"
                    IsChecked="{Binding CurrentTheme, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static enums:Theme.Light}}"
                    Style="{DynamicResource ThemeButton}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Border
                            Width="40"
                            Height="40"
                            Margin="5"
                            Background="{DynamicResource HoverBackground}"
                            CornerRadius="5">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="..\..\Fonts\#FluentSystemIcons-Regular"
                                FontSize="24"
                                Text="&#xF8A2;" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock
                                Margin="5 0"
                                FontWeight="Bold"
                                Text="{x:Static lang:Resources.Light}" />
                            <TextBlock
                                Margin="5 0"
                                Foreground="{DynamicResource DarkGray}"
                                Text="{x:Static lang:Resources.LightDesc}"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </Grid>
                </RadioButton>
                <RadioButton
                    Grid.Column="1"
                    Margin="10 0"
                    BorderThickness="2"
                    Command="{Binding DarkThemeCommand}"
                    GroupName="Theme"
                    IsChecked="{Binding CurrentTheme, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static enums:Theme.Dark}}"
                    Style="{DynamicResource ThemeButton}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Border
                            Width="40"
                            Height="40"
                            Margin="5"
                            Background="{DynamicResource HoverBackground}"
                            CornerRadius="5">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="..\..\Fonts\#FluentSystemIcons-Regular"
                                FontSize="24"
                                Text="&#xF87E;" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock
                                Margin="5 0"
                                FontWeight="Bold"
                                Text="{x:Static lang:Resources.Dark}" />
                            <TextBlock
                                Margin="5 0"
                                Foreground="{DynamicResource DarkGray}"
                                Text="{x:Static lang:Resources.DarkDesc}"
                                TextWrapping="Wrap" />
                        </StackPanel>

                    </Grid>
                </RadioButton>
                <RadioButton
                    Grid.Column="2"
                    BorderThickness="2"
                    Command="{Binding SystemThemeCommand}"
                    GroupName="Theme"
                    IsChecked="{Binding CurrentTheme, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static enums:Theme.System}}"
                    Style="{DynamicResource ThemeButton}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Border
                            Width="40"
                            Height="40"
                            Margin="5"
                            Background="{DynamicResource HoverBackground}"
                            CornerRadius="5">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="..\..\Fonts\#FluentSystemIcons-Regular"
                                FontSize="24"
                                Text="&#xF33C;" />
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock
                                Margin="5 0"
                                FontWeight="Bold"
                                Text="{x:Static lang:Resources.Default}" />
                            <TextBlock
                                Margin="5 0"
                                Foreground="{DynamicResource DarkGray}"
                                Text="{x:Static lang:Resources.DefaultThemeDesc}"
                                TextWrapping="Wrap" />
                        </StackPanel>

                    </Grid>
                </RadioButton>
            </Grid>
        </StackPanel>
        <Button
            x:Name="NextBtn"
            Grid.Row="2"
            Margin="5 10"
            Padding="10 5"
            HorizontalAlignment="Center"
            Background="{DynamicResource Accent}"
            Command="{Binding NextCommand}"
            Content="{x:Static lang:Resources.Next}"
            FontWeight="Bold"
            Foreground="{DynamicResource WindowButtonsHoverForeground1}" />
    </Grid>
</UserControl>

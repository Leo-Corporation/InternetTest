<UserControl
    x:Class="InternetTest.Views.LocateIpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:InternetTest.Components"
    xmlns:converters="clr-namespace:InternetTest.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:InternetTest.Properties"
    xmlns:local="clr-namespace:InternetTest.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vmc="clr-namespace:InternetTest.ViewModels.Components"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="..\Fonts\#Hauora"
    Foreground="{DynamicResource Foreground1}"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis" />
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="6">
            <TextBlock
                Margin="10 5"
                FontSize="24"
                FontWeight="Bold"
                Text="{x:Static lang:Resources.LocateIP}" />
            <TextBlock
                Margin="10 0"
                FontSize="14"
                Text="{x:Static lang:Resources.LocateIpDesc}"
                TextWrapping="Wrap" />
        </StackPanel>
        <Border
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="10"
            Padding="10"
            Background="{DynamicResource CardBackground}"
            BorderBrush="{DynamicResource Border}"
            BorderThickness="1"
            CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.ColumnSpan="2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            FontSize="16"
                            Text="&#xF690;" />
                        <TextBlock
                            Margin="5 0 0 0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="Bold"
                            Text="{x:Static lang:Resources.IpAddressLookup}" />
                    </StackPanel>
                    <TextBlock Foreground="{DynamicResource DarkGray}" Text="{x:Static lang:Resources.IpAddressLookupDesc}" />
                </StackPanel>
                <TextBlock
                    Grid.Row="1"
                    Margin="0 5"
                    FontWeight="SemiBold"
                    Text="{x:Static lang:Resources.IPAddress}" />
                <TextBox
                    Grid.Row="2"
                    Padding="5"
                    Text="{Binding IpAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding LocateIpCommand}" />
                    </TextBox.InputBindings>
                </TextBox>
                <Button
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="5 0"
                    Padding="5 0"
                    Background="{DynamicResource Accent}"
                    Command="{Binding LocateIpCommand}"
                    Content="{x:Static lang:Resources.LocateIP}"
                    FontWeight="SemiBold"
                    Foreground="{DynamicResource WindowButtonsHoverForeground1}" />
                <StackPanel
                    Grid.Row="3"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Margin="5"
                        Padding="5"
                        Background="{DynamicResource LightAccent}"
                        Command="{Binding MyIpCommand}"
                        Content="{x:Static lang:Resources.MyIP}"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource DarkFAccent}" />
                    <Button
                        Margin="5"
                        Padding="5"
                        Background="{DynamicResource LightAccent}"
                        Command="{Binding ShowMapCommand}"
                        Content="{x:Static lang:Resources.ShowOnMap}"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource DarkFAccent}" />
                </StackPanel>
            </Grid>
        </Border>
        <Border
            Grid.Row="2"
            Margin="10"
            Padding="10"
            Background="{DynamicResource CardBackground}"
            BorderBrush="{DynamicResource Border}"
            BorderThickness="1"
            CornerRadius="10"
            Visibility="{Binding Empty, Converter={StaticResource InverseBoolToVis}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.ColumnSpan="2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            FontSize="16"
                            Text="&#xF4F9;" />
                        <TextBlock
                            Margin="5 0 0 0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="Bold"
                            Text="{x:Static lang:Resources.Details}" />
                    </StackPanel>
                </StackPanel>
                <ItemsControl Grid.Row="1" ItemsSource="{Binding Details}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                            </Grid>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Grid.Row" Value="{Binding GridRow}" />
                            <Setter Property="Grid.Column" Value="{Binding GridColumn}" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type vmc:GridItemViewModel}">
                            <components:GridItem />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>
        <Border
            Grid.Row="2"
            Grid.Column="1"
            Margin="10"
            Padding="10"
            Background="{DynamicResource CardBackground}"
            BorderBrush="{DynamicResource Border}"
            BorderThickness="1"
            CornerRadius="10"
            Visibility="{Binding Empty, Converter={StaticResource InverseBoolToVis}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.ColumnSpan="2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            FontSize="16"
                            Text="&#xF58A;" />
                        <TextBlock
                            Margin="5 0 0 0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="Bold"
                            Text="{x:Static lang:Resources.NetworkIspDetails}" />
                    </StackPanel>
                </StackPanel>
                <ItemsControl Grid.Row="1" ItemsSource="{Binding IspInfo}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                            </Grid>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Grid.Row" Value="{Binding GridRow}" />
                            <Setter Property="Grid.Column" Value="{Binding GridColumn}" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type vmc:GridItemViewModel}">
                            <components:GridItem />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>
        <StackPanel
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="20"
            Visibility="{Binding Empty, Converter={StaticResource BoolToVis}}">
            <TextBlock
                HorizontalAlignment="Center"
                FontFamily="../Fonts/#FluentSystemIcons-Regular"
                FontSize="48"
                Text="&#xF4A4;" />
            <TextBlock
                HorizontalAlignment="Center"
                d:Text="{x:Static lang:Resources.NothingToShow}"
                Text="{Binding PlaceholderText}"
                TextWrapping="Wrap" />
        </StackPanel>
        <StackPanel
            Grid.Row="3"
            Margin="10"
            Visibility="{Binding Empty, Converter={StaticResource InverseBoolToVis}}">
            <Button
                Padding="5"
                HorizontalAlignment="Left"
                Background="{x:Null}"
                Command="{Binding ResetCommand}"
                Cursor="Hand"
                FontSize="14"
                FontWeight="ExtraBold"
                Foreground="{DynamicResource Accent}"
                Style="{DynamicResource Link}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="0 0 10 0"
                        VerticalAlignment="Center"
                        FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                        FontWeight="Regular"
                        Text="&#xF140;" />
                    <TextBlock VerticalAlignment="Center" Text="{x:Static lang:Resources.Reset}" />
                </StackPanel>
            </Button>
            <Button
                Padding="5"
                HorizontalAlignment="Left"
                Background="{x:Null}"
                Command="{Binding SaveCommand}"
                Cursor="Hand"
                FontSize="14"
                FontWeight="ExtraBold"
                Foreground="{DynamicResource Accent}"
                Style="{DynamicResource Link}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="0 0 10 0"
                        VerticalAlignment="Center"
                        FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                        FontWeight="Regular"
                        Text="&#xF680;" />
                    <TextBlock VerticalAlignment="Center" Text="{x:Static lang:Resources.Save}" />
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>

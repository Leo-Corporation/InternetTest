<UserControl
    x:Class="InternetTest.Views.WiFiPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:InternetTest.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:InternetTest.Properties"
    xmlns:local="clr-namespace:InternetTest.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:InternetTest.ViewModels.Components"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="..\Fonts\#Hauora"
    Foreground="{DynamicResource Foreground1}"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="6">
            <TextBlock
                Margin="10 5"
                FontSize="24"
                FontWeight="Bold"
                Text="{x:Static lang:Resources.WiFiNetworks}" />
            <TextBlock
                Margin="10 0"
                FontSize="14"
                Text="{x:Static lang:Resources.WiFiNetworksDesc}"
                TextWrapping="Wrap" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Margin="10"
            Orientation="Horizontal">
            <RadioButton
                x:Name="WiFiTabBtn"
                Padding="5"
                Background="Transparent"
                Content="{x:Static lang:Resources.WiFiNetworks}"
                Foreground="{DynamicResource Foreground1}"
                GroupName="Tab"
                Style="{DynamicResource Tab}" />
            <RadioButton
                x:Name="AdapterTabBtn"
                Margin="10 0"
                Padding="5"
                Background="Transparent"
                Content="{x:Static lang:Resources.Adapters}"
                Foreground="{DynamicResource Foreground1}"
                GroupName="Tab"
                Style="{DynamicResource Tab}" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            VerticalAlignment="Center"
            Orientation="Horizontal"
            Visibility="{Binding ElementName=AdapterTabBtn, Path=IsChecked, Converter={StaticResource BoolToVis}}">
            <CheckBox
                Margin="10 0"
                Padding="5"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Content="{x:Static lang:Resources.ShowDisabled}"
                Foreground="{DynamicResource Foreground1}"
                IsChecked="{Binding ShowHidden, Mode=TwoWay}" />
            <Button
                Margin="0 0 10 0"
                Padding="5 2"
                Background="{DynamicResource LightAccent}"
                Command="{Binding RefreshCommand}"
                Content="{x:Static lang:Resources.Refresh}"
                Cursor="Hand"
                FontWeight="SemiBold"
                Foreground="{DynamicResource Accent}" />
        </StackPanel>
        <Grid
            x:Name="WiFiNetworksPage"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Visibility="{Binding ElementName=WiFiTabBtn, Path=IsChecked, Converter={StaticResource BoolToVis}}" />
        <Grid
            x:Name="AdaptersPage"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Visibility="{Binding ElementName=AdapterTabBtn, Path=IsChecked, Converter={StaticResource BoolToVis}}">
            <ItemsControl ItemsSource="{Binding Adapters}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:NetworkAdapterItemViewModel}">
                        <components:NetworkAdapterItem />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</UserControl>

<UserControl
    x:Class="InternetTest.Views.WiFiPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:InternetTest.Components"
    xmlns:converters="clr-namespace:InternetTest.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:InternetTest.Properties"
    xmlns:local="clr-namespace:InternetTest.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:InternetTest.ViewModels.Components"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="..\Fonts\#Hauora"
    Foreground="{DynamicResource Foreground1}"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis" />
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="6">
            <TextBlock
                Margin="10 5"
                FontSize="24"
                FontWeight="Bold"
                Text="{x:Static lang:Resources.WiFiNetworks}" />
            <TextBlock
                Margin="10 0"
                FontSize="14"
                Text="{x:Static lang:Resources.WiFiNetworksDesc}"
                TextWrapping="Wrap" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Margin="10"
            Orientation="Horizontal">
            <RadioButton
                x:Name="WiFiTabBtn"
                Padding="5"
                Background="Transparent"
                Content="{x:Static lang:Resources.WiFiNetworks}"
                Foreground="{DynamicResource Foreground1}"
                GroupName="Tab"
                IsChecked="True"
                Style="{DynamicResource Tab}" />
            <RadioButton
                x:Name="AdapterTabBtn"
                Margin="10 0"
                Padding="5"
                Background="Transparent"
                Content="{x:Static lang:Resources.Adapters}"
                Foreground="{DynamicResource Foreground1}"
                GroupName="Tab"
                Style="{DynamicResource Tab}" />
        </StackPanel>
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Width="200"
            Margin="10 0"
            Padding="5"
            VerticalAlignment="Center"
            BorderBrush="{DynamicResource Border}"
            BorderThickness="1"
            Text="{Binding Query, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Visibility="{Binding ElementName=WiFiTabBtn, Path=IsChecked, Converter={StaticResource BoolToVis}}" />
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            VerticalAlignment="Center"
            Orientation="Horizontal"
            Visibility="{Binding ElementName=AdapterTabBtn, Path=IsChecked, Converter={StaticResource BoolToVis}}">
            <CheckBox
                Margin="10 0"
                Padding="5"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Content="{x:Static lang:Resources.ShowDisabled}"
                Foreground="{DynamicResource Foreground1}"
                IsChecked="{Binding ShowHidden, Mode=TwoWay}" />
            <Button
                Margin="0 0 10 0"
                Padding="5 2"
                Background="{DynamicResource LightAccent}"
                Command="{Binding RefreshCommand}"
                Content="{x:Static lang:Resources.Refresh}"
                Cursor="Hand"
                FontWeight="SemiBold"
                Foreground="{DynamicResource DarkFAccent}" />
        </StackPanel>
        <Grid
            x:Name="WiFiNetworksPage"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Visibility="{Binding ElementName=WiFiTabBtn, Path=IsChecked, Converter={StaticResource BoolToVis}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Border
                Margin="10"
                Padding="10"
                Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource Border}"
                BorderThickness="1"
                CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                                FontSize="16"
                                Text="&#xF8B4;" />
                            <TextBlock
                                Margin="5 0 0 0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                FontWeight="Bold"
                                Text="{x:Static lang:Resources.WifiPasswords}" />
                        </StackPanel>
                        <TextBlock Foreground="{DynamicResource DarkGray}" Text="{x:Static lang:Resources.WiFiPasswordsDesc}" />
                    </StackPanel>
                    <ItemsControl
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        ItemsSource="{Binding WlanProfiles}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:WlanProfileItemViewModel}">
                                <components:WlanProfileItem />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <StackPanel
                        Grid.Row="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{Binding ProfileLoading, Converter={StaticResource BoolToVis}}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontFamily="../Fonts/#FluentSystemIcons-Regular"
                            FontSize="48"
                            Foreground="{DynamicResource Accent}"
                            RenderTransformOrigin="0.5,0.5"
                            Text="&#xF709;">
                            <TextBlock.RenderTransform>
                                <RotateTransform x:Name="SpinTransform1" Angle="0" />
                            </TextBlock.RenderTransform>

                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="TextBlock.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                RepeatBehavior="Forever"
                                                Storyboard.TargetName="SpinTransform1"
                                                Storyboard.TargetProperty="Angle"
                                                From="0"
                                                To="360"
                                                Duration="0:0:1" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>
                        <TextBlock
                            HorizontalAlignment="Center"
                            Text="{x:Static lang:Resources.Loading}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                    <StackPanel
                        Grid.Row="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{Binding NoProfiles, Converter={StaticResource BoolToVis}}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontFamily="../Fonts/#FluentSystemIcons-Regular"
                            FontSize="48"
                            Text="&#xF4A4;" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            Text="{x:Static lang:Resources.NoNetworks}"
                            TextWrapping="Wrap" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button
                            Padding="5"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            Command="{Binding ExportCommand}"
                            Content="&#xF1A5;"
                            Cursor="Hand"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            Foreground="{DynamicResource Foreground1}">
                            <Button.ToolTip>
                                <ToolTip Content="{x:Static lang:Resources.Export}" />
                            </Button.ToolTip>
                        </Button>
                        <Button
                            Padding="5"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            Command="{Binding RefreshProfilesCommand}"
                            Content="&#xF191;"
                            Cursor="Hand"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            Foreground="{DynamicResource Foreground1}">
                            <Button.ToolTip>
                                <ToolTip Content="{x:Static lang:Resources.Refresh}" />
                            </Button.ToolTip>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            <Border
                Grid.Row="1"
                Margin="10"
                Padding="10"
                Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource Border}"
                BorderThickness="1"
                CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                                FontSize="16"
                                Text="&#xF8AD;" />
                            <TextBlock
                                Margin="5 0 0 0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                FontWeight="Bold"
                                Text="{x:Static lang:Resources.Available}" />
                        </StackPanel>
                        <TextBlock Foreground="{DynamicResource DarkGray}" Text="{x:Static lang:Resources.AvailableNetworksDesc}" />
                    </StackPanel>

                    <Button
                        Grid.Column="1"
                        Padding="5"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        Command="{Binding RefreshWiFiCommand}"
                        Content="&#xF191;"
                        Cursor="Hand"
                        FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                        Foreground="{DynamicResource Foreground1}">
                        <Button.ToolTip>
                            <ToolTip Content="{x:Static lang:Resources.Refresh}" />
                        </Button.ToolTip>
                    </Button>

                    <ItemsControl
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        ItemsSource="{Binding WiFiNetworks}"
                        Visibility="{Binding IsRefreshing, Converter={StaticResource InverseBoolToVis}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:ConnectWiFiItemViewModel}">
                                <components:ConnectWiFiItem />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <StackPanel
                        x:Name="ScanningPanel"
                        Grid.Row="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{Binding IsRefreshing, Converter={StaticResource BoolToVis}}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontFamily="../Fonts/#FluentSystemIcons-Regular"
                            FontSize="48"
                            Foreground="{DynamicResource Accent}"
                            RenderTransformOrigin="0.5,0.5"
                            Text="&#xF709;">
                            <TextBlock.RenderTransform>
                                <RotateTransform x:Name="SpinTransform" Angle="0" />
                            </TextBlock.RenderTransform>

                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="TextBlock.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                RepeatBehavior="Forever"
                                                Storyboard.TargetName="SpinTransform"
                                                Storyboard.TargetProperty="Angle"
                                                From="0"
                                                To="360"
                                                Duration="0:0:1" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>
                        <TextBlock
                            HorizontalAlignment="Center"
                            Text="{x:Static lang:Resources.ScanningInProgress}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                    <StackPanel
                        x:Name="NoNetworksPanel"
                        Grid.Row="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{Binding NoNetworks, Converter={StaticResource BoolToVis}}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontFamily="../Fonts/#FluentSystemIcons-Regular"
                            FontSize="48"
                            Text="&#xFB69;" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            Text="{x:Static lang:Resources.NoNetworks}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>

            </Border>
        </Grid>
        <Grid
            x:Name="AdaptersPage"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Visibility="{Binding ElementName=AdapterTabBtn, Path=IsChecked, Converter={StaticResource BoolToVis}}">
            <ItemsControl ItemsSource="{Binding Adapters}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:NetworkAdapterItemViewModel}">
                        <components:NetworkAdapterItem />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</UserControl>

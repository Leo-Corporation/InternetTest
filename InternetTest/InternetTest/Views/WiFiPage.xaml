<UserControl
    x:Class="InternetTest.Views.WiFiPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:InternetTest.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:InternetTest.Properties"
    xmlns:local="clr-namespace:InternetTest.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:InternetTest.ViewModels.Components"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="..\Fonts\#Hauora"
    Foreground="{DynamicResource Foreground1}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.ColumnSpan="6">
            <TextBlock
                Margin="10 5"
                FontSize="24"
                FontWeight="Bold"
                Text="{x:Static lang:Resources.WiFiNetworks}" />
            <TextBlock
                Margin="10 0"
                FontSize="14"
                Text="{x:Static lang:Resources.WiFiNetworksDesc}"
                TextWrapping="Wrap" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Margin="10"
            Orientation="Horizontal">
            <RadioButton
                Padding="5"
                Background="Transparent"
                Content="{x:Static lang:Resources.WiFiNetworks}"
                Foreground="{DynamicResource Foreground1}"
                GroupName="Tab"
                Style="{DynamicResource Tab}" />
            <RadioButton
                Margin="10 0"
                Padding="5"
                Background="Transparent"
                Content="{x:Static lang:Resources.NetworkAdapters}"
                Foreground="{DynamicResource Foreground1}"
                GroupName="Tab"
                Style="{DynamicResource Tab}" />
        </StackPanel>
        <Grid x:Name="AdaptersPage" Grid.Row="2">
            <ItemsControl ItemsSource="{Binding Adapters}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:NetworkAdapterItemViewModel}">
                        <components:NetworkAdapterItem />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</UserControl>

<UserControl
    x:Class="InternetTest.Views.DnsToolsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:InternetTest.Components"
    xmlns:converters="clr-namespace:InternetTest.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:InternetTest.Properties"
    xmlns:local="clr-namespace:InternetTest.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:InternetTest.ViewModels"
    xmlns:vmc="clr-namespace:InternetTest.ViewModels.Components"
    d:DesignHeight="850"
    d:DesignWidth="800"
    FontFamily="..\Fonts\#Hauora"
    Foreground="{DynamicResource Foreground1}"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis" />
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.ColumnSpan="6">
            <TextBlock
                Margin="10 5"
                FontSize="24"
                FontWeight="Bold"
                Text="{x:Static lang:Resources.DNSTool}" />
            <TextBlock
                Margin="10 0"
                FontSize="14"
                Text="{x:Static lang:Resources.DnsPageDesc}"
                TextWrapping="Wrap" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Margin="10"
            Orientation="Horizontal">
            <RadioButton
                x:Name="DnsLookupTabBtn"
                Padding="5"
                Background="Transparent"
                Content="{x:Static lang:Resources.DNS}"
                Foreground="{DynamicResource Foreground1}"
                GroupName="Tab"
                IsChecked="True"
                Style="{DynamicResource Tab}" />
            <RadioButton
                x:Name="DnsCacheTabBtn"
                Margin="10 0"
                Padding="5"
                Background="Transparent"
                Content="{x:Static lang:Resources.DnsCache}"
                Foreground="{DynamicResource Foreground1}"
                GroupName="Tab"
                Style="{DynamicResource Tab}" />
        </StackPanel>
        <Grid
            x:Name="DnsLookup"
            Grid.Row="2"
            Visibility="{Binding ElementName=DnsLookupTabBtn, Path=IsChecked, Converter={StaticResource BoolToVis}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Border
                Grid.Row="1"
                Margin="10"
                Padding="10"
                Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource Border}"
                BorderThickness="1"
                CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            FontSize="16"
                            Text="&#xF3AF;" />
                        <TextBlock
                            Margin="5 0 0 0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="Bold"
                            Text="{x:Static lang:Resources.DomainLookup}" />
                    </StackPanel>
                    <TextBox
                        Grid.Row="1"
                        Margin="0 5"
                        Padding="5"
                        FontSize="14"
                        Text="{Binding Query, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding GetDnsInfoCommand}" />
                        </TextBox.InputBindings>
                    </TextBox>
                    <Button
                        Grid.Row="2"
                        Margin="0 5"
                        Padding="5"
                        HorizontalAlignment="Left"
                        Background="{DynamicResource Accent}"
                        Command="{Binding GetDnsInfoCommand}"
                        Content="{x:Static lang:Resources.GetDnsInfo}"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource WindowButtonsHoverForeground1}" />
                </Grid>
            </Border>
            <Border
                Grid.Row="2"
                Margin="10"
                Padding="10"
                Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource Border}"
                BorderThickness="1"
                CornerRadius="10"
                Visibility="{Binding HasInfo, Converter={StaticResource BoolToVis}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            FontSize="16"
                            Text="&#xF460;" />
                        <TextBlock
                            Margin="5 0 0 0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="Bold"
                            Text="{x:Static lang:Resources.Details}" />
                    </StackPanel>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Margin="0 5"
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            Foreground="{DynamicResource DarkGray}"
                            Text="&#xF45E;" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="5"
                            Foreground="{DynamicResource DarkGray}"
                            Text="{x:Static lang:Resources.Domain}" />
                        <TextBlock
                            Grid.Column="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            d:Text="Content"
                            FontFamily="Consolas"
                            FontWeight="SemiBold"
                            Text="{Binding Domain}" />
                        <TextBlock
                            Grid.Row="1"
                            Margin="0 5"
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            Foreground="{DynamicResource DarkGray}"
                            Text="&#xF466;" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="5"
                            Foreground="{DynamicResource DarkGray}"
                            Text="{x:Static lang:Resources.IPAddress}" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            d:Text="Content"
                            FontWeight="SemiBold"
                            Text="{Binding IpAddress}" />
                        <TextBlock
                            Grid.Row="2"
                            Margin="0 5"
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            Foreground="{DynamicResource DarkGray}"
                            Text="&#xF22B;" />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="5"
                            Foreground="{DynamicResource DarkGray}"
                            Text="{x:Static lang:Resources.CreationDate}" />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            d:Text="Content"
                            FontWeight="SemiBold"
                            Text="{Binding CreateDate}" />
                        <TextBlock
                            Grid.Row="3"
                            Margin="0 5"
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            Foreground="{DynamicResource DarkGray}"
                            Text="&#xF22B;" />
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="5"
                            Foreground="{DynamicResource DarkGray}"
                            Text="{x:Static lang:Resources.ExpirationDate}" />
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            d:Text="Content"
                            FontWeight="SemiBold"
                            Text="{Binding ExpirationDate}" />
                        <TextBlock
                            Grid.Row="4"
                            Margin="0 5"
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            Foreground="{DynamicResource DarkGray}"
                            Text="&#xF5BE;" />
                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="1"
                            Margin="5"
                            Foreground="{DynamicResource DarkGray}"
                            Text="{x:Static lang:Resources.Registrant}" />
                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            d:Text="Content"
                            FontWeight="SemiBold"
                            Text="{Binding Registrant}" />
                        <TextBlock
                            Grid.Row="5"
                            Margin="0 5"
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            Foreground="{DynamicResource DarkGray}"
                            Text="&#xF6BF;" />
                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="1"
                            Margin="5"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource DarkGray}"
                            Text="{x:Static lang:Resources.Status}" />
                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            d:Text="Content"
                            FontWeight="SemiBold"
                            Text="{Binding Status}" />
                    </Grid>
                </Grid>
            </Border>
            <Border
                Grid.Row="3"
                Margin="10"
                Padding="10"
                Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource Border}"
                BorderThickness="1"
                CornerRadius="10"
                Visibility="{Binding HasInfo, Converter={StaticResource BoolToVis}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            FontSize="16"
                            Text="&#xF90D;" />
                        <TextBlock
                            Margin="5 0 0 0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="Bold"
                            Text="{x:Static lang:Resources.DNSInfo}" />
                    </StackPanel>
                    <Button
                        Grid.Column="1"
                        Padding="5"
                        Background="Transparent"
                        Command="{Binding SaveCommand}"
                        Content="&#xF680;"
                        FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                        Foreground="{DynamicResource Foreground1}">
                        <Button.ToolTip>
                            <ToolTip Content="{x:Static lang:Resources.ExportToCSV}" />
                        </Button.ToolTip>
                    </Button>
                    <ItemsControl
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        ItemsSource="{Binding DnsTabs}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:DnsRecordTabBtnViewModel}">
                                <RadioButton
                                    MinWidth="20"
                                    Margin="5 0"
                                    Padding="5"
                                    Background="Transparent"
                                    Command="{Binding SelectCommand}"
                                    Content="{Binding Title}"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource Foreground1}"
                                    GroupName="Dns"
                                    IsChecked="{Binding IsChecked}"
                                    Style="{DynamicResource Tab2}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <ItemsControl
                        Grid.Row="2"
                        Grid.ColumnSpan="2"
                        ItemsSource="{Binding DnsRecordsItems}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vmc:DnsItemViewModel}">
                                <components:DnsItem />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding IsRefreshing, Converter={StaticResource BoolToVis}}">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontFamily="../Fonts/#FluentSystemIcons-Regular"
                    FontSize="48"
                    Foreground="{DynamicResource Accent}"
                    RenderTransformOrigin="0.5,0.5"
                    Text="&#xF709;">
                    <TextBlock.RenderTransform>
                        <RotateTransform x:Name="SpinTransform" Angle="0" />
                    </TextBlock.RenderTransform>

                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="TextBlock.Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        RepeatBehavior="Forever"
                                        Storyboard.TargetName="SpinTransform"
                                        Storyboard.TargetProperty="Angle"
                                        From="0"
                                        To="360"
                                        Duration="0:0:1" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
                <TextBlock
                    HorizontalAlignment="Center"
                    Text="{x:Static lang:Resources.Loading}"
                    TextWrapping="Wrap" />
            </StackPanel>
            <StackPanel
                Grid.Row="2"
                Margin="20"
                VerticalAlignment="Center"
                Visibility="{Binding PlaceholderVis, Converter={StaticResource BoolToVis}}">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontFamily="../Fonts/#FluentSystemIcons-Regular"
                    FontSize="48"
                    Text="&#xF1F0;" />
                <TextBlock
                    HorizontalAlignment="Center"
                    Text="{x:Static lang:Resources.DnsInfoWillShowHere}"
                    TextWrapping="Wrap" />
            </StackPanel>
        </Grid>
        <Grid
            x:Name="Cache"
            Grid.Row="2"
            Visibility="{Binding ElementName=DnsCacheTabBtn, Path=IsChecked, Converter={StaticResource BoolToVis}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Border
                Grid.Row="0"
                Margin="10"
                Padding="10"
                Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource Border}"
                BorderThickness="1"
                CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            FontSize="16"
                            Text="&#xF90A;" />
                        <TextBlock
                            Margin="5 0 0 0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="Bold"
                            Text="{x:Static lang:Resources.GetCache}" />
                    </StackPanel>
                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <Button
                            Margin="5"
                            Padding="5"
                            Background="{DynamicResource Accent}"
                            Command="{Binding GetDnsCacheCommand}"
                            Content="{x:Static lang:Resources.GetCache}"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource WindowButtonsHoverForeground1}" />
                        <Button
                            Margin="5"
                            Padding="5"
                            Background="{DynamicResource LightAccent}"
                            Command="{Binding FlushCommand}"
                            Content="{x:Static lang:Resources.FlushDNS}"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource DarkFAccent}" />
                    </StackPanel>
                    <StackPanel
                        x:Name="StatusSection"
                        Grid.Row="1"
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Visibility="{Binding CacheLoaded}">
                        <StackPanel.ToolTip>
                            <ToolTip Content="{Binding TooltipContent}" />
                        </StackPanel.ToolTip>
                        <Border
                            x:Name="SuccessBorder"
                            Margin="2 0"
                            Padding="5 2"
                            Background="{DynamicResource LightGreen}"
                            CornerRadius="10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0 0 5 0"
                                    VerticalAlignment="Center"
                                    FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                                    Foreground="{DynamicResource ForegroundGreen}"
                                    Text="&#xF299;" />
                                <TextBlock
                                    x:Name="SuccessNbTxt"
                                    VerticalAlignment="Center"
                                    d:Text="12"
                                    FontWeight="Bold"
                                    Foreground="{DynamicResource ForegroundGreen}"
                                    Text="{Binding Success}" />
                            </StackPanel>
                        </Border>
                        <Border
                            x:Name="ErrorBorder"
                            Margin="2 0"
                            Padding="5 2"
                            Background="{DynamicResource LightOrange}"
                            CornerRadius="10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0 0 5 0"
                                    VerticalAlignment="Center"
                                    FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                                    Foreground="{DynamicResource ForegroundOrange}"
                                    Text="&#xF86A;" />
                                <TextBlock
                                    x:Name="ErrorNbTxt"
                                    VerticalAlignment="Center"
                                    d:Text="12"
                                    FontWeight="Bold"
                                    Foreground="{DynamicResource ForegroundOrange}"
                                    Text="{Binding Error}" />
                            </StackPanel>
                        </Border>
                        <Border
                            Margin="2 0"
                            Padding="5 2"
                            Background="{DynamicResource LightAccent}"
                            CornerRadius="10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0 0 5 0"
                                    VerticalAlignment="Center"
                                    FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                                    Foreground="{DynamicResource Accent}"
                                    Text="&#xF4A4;" />
                                <TextBlock
                                    x:Name="TotalTxt"
                                    VerticalAlignment="Center"
                                    d:Text="12"
                                    FontWeight="Bold"
                                    Foreground="{DynamicResource Accent}"
                                    Text="{Binding Info}" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
            <StackPanel
                Grid.Row="3"
                Margin="20"
                VerticalAlignment="Center"
                Visibility="{Binding CacheLoaded, Converter={StaticResource InverseBoolToVis}}">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontFamily="../Fonts/#FluentSystemIcons-Regular"
                    FontSize="48"
                    Text="&#xF4A4;" />
                <TextBlock
                    HorizontalAlignment="Center"
                    Text="{x:Static lang:Resources.NothingToShow}"
                    TextWrapping="Wrap" />
            </StackPanel>
            <Border
                Grid.Row="3"
                Margin="10"
                Padding="0 10"
                Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource Border}"
                BorderThickness="1"
                CornerRadius="10"
                Visibility="{Binding CacheLoaded, Converter={StaticResource BoolToVis}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Margin="10 0" Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            FontSize="16"
                            Text="&#xF9B8;" />
                        <TextBlock
                            Margin="5 0 0 0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="Bold"
                            Text="{x:Static lang:Resources.DnsCache}" />
                    </StackPanel>
                    <Border
                        Grid.Row="1"
                        BorderBrush="{DynamicResource Border}"
                        BorderThickness="0 0 0 1">
                        <Grid Margin="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                FontSize="14"
                                FontWeight="Bold"
                                Text="{x:Static lang:Resources.Entry}" />
                            <TextBlock
                                Grid.Column="1"
                                FontSize="14"
                                FontWeight="Bold"
                                Text="{x:Static lang:Resources.RecordName}" />
                            <TextBlock
                                Grid.Column="2"
                                FontSize="14"
                                FontWeight="Bold"
                                Text="{x:Static lang:Resources.Type}" />
                            <TextBlock
                                Grid.Column="3"
                                FontSize="14"
                                FontWeight="Bold"
                                Text="{x:Static lang:Resources.Status}" />
                            <TextBlock
                                Grid.Column="4"
                                FontSize="14"
                                FontWeight="Bold"
                                Text="{x:Static lang:Resources.Data}" />
                        </Grid>
                    </Border>
                    <ItemsControl
                        Grid.Row="2"
                        Grid.ColumnSpan="3"
                        ItemsSource="{Binding DnsCacheItems}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vmc:DnsCacheItemViewModel}">
                                <components:DnsCacheItem />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>

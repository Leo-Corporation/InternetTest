<UserControl
    x:Class="InternetTest.Views.PingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:InternetTest.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:InternetTest.Properties"
    xmlns:local="clr-namespace:InternetTest.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="850"
    d:DesignWidth="800"
    FontFamily="..\Fonts\#Hauora"
    Foreground="{DynamicResource Foreground1}"
    mc:Ignorable="d">

    <Grid>
        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis" />
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="6">
            <TextBlock
                Margin="10 5"
                FontSize="24"
                FontWeight="Bold"
                Text="{x:Static lang:Resources.Ping}" />
            <TextBlock
                Margin="10 0"
                FontSize="14"
                Text="{x:Static lang:Resources.PingDesc}"
                TextWrapping="Wrap" />
        </StackPanel>
        <Border
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="10"
            Padding="10"
            Background="{DynamicResource CardBackground}"
            BorderBrush="{DynamicResource Border}"
            BorderThickness="1"
            CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            FontSize="16"
                            Text="&#xF415;" />
                        <TextBlock
                            Margin="5 0 0 0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="Bold"
                            Text="{x:Static lang:Resources.Configuration}" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Row="1">
                    <TextBlock
                        Margin="5"
                        FontWeight="SemiBold"
                        Text="{x:Static lang:Resources.URL}" />
                    <TextBox
                        Margin="5"
                        Padding="5"
                        Text="{Binding Query, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding PingCommand}" />
                        </TextBox.InputBindings>
                    </TextBox>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Margin="5"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="{x:Static lang:Resources.Requests}" />
                        <TextBox
                            Width="100"
                            Margin="5"
                            Padding="5"
                            HorizontalAlignment="Left"
                            HorizontalContentAlignment="Center"
                            Text="{Binding RequestAmount, Mode=TwoWay}" />
                    </StackPanel>
                    <Button
                        Width="100"
                        Margin="5"
                        Padding="5"
                        HorizontalAlignment="Left"
                        Background="{DynamicResource Accent}"
                        Command="{Binding PingCommand}"
                        Content="{x:Static lang:Resources.Ping}"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource WindowButtonsHoverForeground1}" />
                </StackPanel>
            </Grid>
        </Border>
        <Border
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="10"
            Padding="10"
            Background="{DynamicResource CardBackground}"
            BorderBrush="{DynamicResource Border}"
            BorderThickness="1"
            CornerRadius="10"
            Visibility="{Binding Empty, Converter={StaticResource InverseBoolToVis}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.ColumnSpan="2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            FontSize="16"
                            Text="&#xF33D;" />
                        <TextBlock
                            Margin="5 0 0 0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="Bold"
                            Text="{x:Static lang:Resources.Details}" />
                    </StackPanel>
                    <TextBlock
                        d:Text="{x:Static lang:Resources.URL}"
                        Foreground="{DynamicResource DarkGray}"
                        Text="{Binding Host}" />
                </StackPanel>
                <Button
                    Grid.Column="1"
                    Padding="5"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    Command="{Binding CopyCommand}"
                    Content="&#xF32C;"
                    Cursor="Hand"
                    FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                    Foreground="{DynamicResource Foreground1}">
                    <Button.ToolTip>
                        <ToolTip Content="{x:Static lang:Resources.Copy}" />
                    </Button.ToolTip>
                </Button>
                <Grid Grid.Row="1" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Margin="5"
                        FontWeight="SemiBold"
                        Text="{x:Static lang:Resources.Duration}" />
                    <TextBlock
                        Grid.Row="1"
                        Margin="5"
                        Foreground="{DynamicResource DarkGray}"
                        Text="{x:Static lang:Resources.MinTime}" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        d:Text="100ms"
                        FontFamily="Consolas"
                        Text="{Binding Min}" />
                    <TextBlock
                        Grid.Row="2"
                        Margin="5"
                        Foreground="{DynamicResource DarkGray}"
                        Text="{x:Static lang:Resources.MaxTime}" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        d:Text="100ms"
                        FontFamily="Consolas"
                        Text="{Binding Max}" />
                    <TextBlock
                        Grid.Row="3"
                        Margin="5"
                        Foreground="{DynamicResource DarkGray}"
                        Text="{x:Static lang:Resources.AverageTime}" />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        d:Text="100ms"
                        FontFamily="Consolas"
                        Text="{Binding Avg}" />

                    <Rectangle
                        Grid.Row="4"
                        Grid.ColumnSpan="2"
                        Height="1"
                        Margin="5"
                        Fill="{DynamicResource Border}" />
                    <TextBlock
                        Grid.Row="5"
                        Margin="5"
                        FontWeight="SemiBold"
                        Text="{x:Static lang:Resources.SessionInfo}" />
                    <TextBlock
                        Grid.Row="6"
                        Margin="5"
                        Foreground="{DynamicResource DarkGray}"
                        Text="{x:Static lang:Resources.Duration}" />
                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="1"
                        Margin="5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        d:Text="100ms"
                        Text="{Binding Duration}" />
                    <TextBlock
                        Grid.Row="7"
                        Margin="5"
                        Foreground="{DynamicResource DarkGray}"
                        Text="{x:Static lang:Resources.StartTime}" />
                    <TextBlock
                        Grid.Row="7"
                        Grid.Column="1"
                        Margin="5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        d:Text="100ms"
                        Text="{Binding StartTime}" />

                    <TextBlock
                        Grid.Column="2"
                        Margin="5"
                        FontWeight="SemiBold"
                        Text="{x:Static lang:Resources.PacketStatistics}" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="2"
                        Margin="5"
                        Foreground="{DynamicResource DarkGray}"
                        Text="{x:Static lang:Resources.PackageSent}" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="3"
                        Margin="5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        d:Text="0%"
                        FontFamily="Consolas"
                        Text="{Binding Sent}" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="2"
                        Margin="5"
                        Foreground="{DynamicResource DarkGray}"
                        Text="{x:Static lang:Resources.PackageReceived}" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="3"
                        Margin="5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        d:Text="0%"
                        FontFamily="Consolas"
                        Foreground="{DynamicResource Green}"
                        Text="{Binding Received}" />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="2"
                        Margin="5"
                        Foreground="{DynamicResource DarkGray}"
                        Text="{x:Static lang:Resources.PackageLost}" />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="3"
                        Margin="5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        d:Text="0%"
                        FontFamily="Consolas"
                        Foreground="{DynamicResource Red}"
                        Text="{Binding Lost}" />
                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="2"
                        Margin="5"
                        Foreground="{DynamicResource DarkGray}"
                        Text="{x:Static lang:Resources.LossRate}" />
                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="3"
                        Margin="5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        d:Text="0%"
                        FontFamily="Consolas"
                        Text="{Binding LossPercentage}" />
                </Grid>
            </Grid>
        </Border>
        <StackPanel
            Grid.Row="2"
            Margin="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="{Binding Empty, Converter={StaticResource BoolToVis}}">
            <TextBlock
                HorizontalAlignment="Center"
                FontFamily="../Fonts/#FluentSystemIcons-Regular"
                FontSize="48"
                Text="&#xF4F1;" />
            <TextBlock
                HorizontalAlignment="Center"
                Text="{x:Static lang:Resources.PingStatus}"
                TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</UserControl>

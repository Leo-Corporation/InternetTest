<UserControl
    x:Class="InternetTest.Views.TraceroutePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:InternetTest.Components"
    xmlns:converters="clr-namespace:InternetTest.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:InternetTest.Properties"
    xmlns:local="clr-namespace:InternetTest.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:InternetTest.ViewModels.Components"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="..\Fonts\#Hauora"
    Foreground="{DynamicResource Foreground1}"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis" />
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.ColumnSpan="6">
            <TextBlock
                Margin="10 5"
                FontSize="24"
                FontWeight="Bold"
                Text="{x:Static lang:Resources.TraceRoute}" />
            <TextBlock
                Margin="10 0"
                FontSize="14"
                Text="{x:Static lang:Resources.TraceroutePageDesc}"
                TextWrapping="Wrap" />
        </StackPanel>
        <Border
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="10"
            Padding="10"
            Background="{DynamicResource CardBackground}"
            BorderBrush="{DynamicResource Border}"
            BorderThickness="1"
            CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel Grid.ColumnSpan="2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            FontSize="16"
                            Text="&#xF531;" />
                        <TextBlock
                            Margin="5 0 0 0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="Bold"
                            Text="{x:Static lang:Resources.TracerouteConfiguration}" />
                    </StackPanel>
                    <TextBlock Foreground="{DynamicResource DarkGray}" Text="{x:Static lang:Resources.TraceRouteDesc}" />
                    <TextBlock
                        Margin="0 5"
                        FontWeight="SemiBold"
                        Text="{x:Static lang:Resources.TargetHostname}" />
                    <TextBox
                        Margin="0 5"
                        Padding="5"
                        VerticalContentAlignment="Center"
                        Text="{Binding Target, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <Button
                    Grid.Row="1"
                    Width="100"
                    Margin="0 10 0 0"
                    Padding="5"
                    HorizontalAlignment="Left"
                    Background="{DynamicResource Accent}"
                    Command="{Binding TraceCommand}"
                    Content="{x:Static lang:Resources.Trace}"
                    FontWeight="SemiBold"
                    Foreground="{DynamicResource WindowButtonsHoverForeground1}" />
            </Grid>
        </Border>
        <Grid Grid.Row="2" Visibility="{Binding DetailsVisible, Converter={StaticResource BoolToVis}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Border
                Margin="10"
                Padding="10"
                Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource Border}"
                BorderThickness="1"
                CornerRadius="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock FontWeight="SemiBold" Text="{x:Static lang:Resources.TotalHops}" />
                    <TextBlock
                        Grid.Column="1"
                        FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                        FontSize="16"
                        Foreground="{DynamicResource DarkGray}"
                        Text="&#xFDA1;" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        d:Text="16"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="{Binding TotalHops}" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.ColumnSpan="2"
                        d:Text="{x:Static lang:Resources.MaxHopsS}"
                        Foreground="{DynamicResource DarkGray}"
                        Text="{Binding TotalHopsDesc}" />
                </Grid>
            </Border>

            <Border
                Grid.Column="1"
                Margin="10"
                Padding="10"
                Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource Border}"
                BorderThickness="1"
                CornerRadius="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock FontWeight="SemiBold" Text="{x:Static lang:Resources.SuccessfulHops}" />
                    <TextBlock
                        Grid.Column="1"
                        FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                        FontSize="16"
                        Foreground="{DynamicResource DarkGray}"
                        Text="&#xF299;" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        d:Text="14"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="{Binding SuccessfullHops}" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.ColumnSpan="2"
                        d:Text="14"
                        Foreground="{DynamicResource DarkGray}"
                        Text="{Binding SuccessfullHopsDesc}" />
                </Grid>
            </Border>

            <Border
                Grid.Column="2"
                Margin="10"
                Padding="10"
                Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource Border}"
                BorderThickness="1"
                CornerRadius="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock FontWeight="SemiBold" Text="{x:Static lang:Resources.Duration}" />
                    <TextBlock
                        Grid.Column="1"
                        FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                        FontSize="16"
                        Foreground="{DynamicResource DarkGray}"
                        Text="&#xF2DE;" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        d:Text="12s"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="{Binding Duration}" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.ColumnSpan="2"
                        d:Text="12:41:20"
                        Foreground="{DynamicResource DarkGray}"
                        Text="{Binding StartTime}" />
                </Grid>
            </Border>

            <Border
                Grid.Column="3"
                Margin="10"
                Padding="10"
                Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource Border}"
                BorderThickness="1"
                CornerRadius="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock FontWeight="SemiBold" Text="{x:Static lang:Resources.Target}" />
                    <TextBlock
                        Grid.Column="1"
                        FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                        FontSize="16"
                        Foreground="{DynamicResource DarkGray}"
                        Text="&#xFBEF;" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        d:Text="8.8.8.8"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="{Binding StaticTarget}" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.ColumnSpan="2"
                        Foreground="{DynamicResource DarkGray}"
                        Text="{Binding TargetFinal}" />
                </Grid>
            </Border>
        </Grid>
        <StackPanel
            x:Name="ScanningPanel"
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="{Binding Loading, Converter={StaticResource BoolToVis}}">
            <TextBlock
                HorizontalAlignment="Center"
                FontFamily="../Fonts/#FluentSystemIcons-Regular"
                FontSize="48"
                Foreground="{DynamicResource Accent}"
                RenderTransformOrigin="0.5,0.5"
                Text="&#xF709;">
                <TextBlock.RenderTransform>
                    <RotateTransform x:Name="SpinTransform" Angle="0" />
                </TextBlock.RenderTransform>

                <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="TextBlock.Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    RepeatBehavior="Forever"
                                    Storyboard.TargetName="SpinTransform"
                                    Storyboard.TargetProperty="Angle"
                                    From="0"
                                    To="360"
                                    Duration="0:0:1" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </TextBlock.Triggers>
            </TextBlock>
            <TextBlock
                HorizontalAlignment="Center"
                Text="{x:Static lang:Resources.TraceProgress}"
                TextWrapping="Wrap" />
        </StackPanel>
        <Border
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="10"
            Padding="10"
            Background="{DynamicResource CardBackground}"
            BorderBrush="{DynamicResource Border}"
            BorderThickness="1"
            CornerRadius="10"
            Visibility="{Binding Empty, Converter={StaticResource InverseBoolToVis}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel Grid.ColumnSpan="2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            FontSize="16"
                            Text="&#xF4FC;" />
                        <TextBlock
                            Margin="5 0 0 0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="Bold"
                            Text="{x:Static lang:Resources.TraceRoute}" />
                    </StackPanel>
                    <TextBlock
                        d:Text="{x:Static lang:Resources.RouteTraceDesc}"
                        Foreground="{DynamicResource DarkGray}"
                        Text="{Binding TraceRouteDesc}" />
                </StackPanel>
                <ItemsControl
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    ItemsSource="{Binding TracerouteItems}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type vm:TracerouteItemViewModel}">
                            <components:TracerouteItem />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>
        <StackPanel
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="20"
            VerticalAlignment="Center"
            Visibility="{Binding Empty, Converter={StaticResource BoolToVis}}">
            <TextBlock
                HorizontalAlignment="Center"
                FontFamily="../Fonts/#FluentSystemIcons-Regular"
                FontSize="48"
                Text="&#xF4A4;" />
            <TextBlock
                HorizontalAlignment="Center"
                Text="{x:Static lang:Resources.TraceRouteInformation}"
                TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</UserControl>

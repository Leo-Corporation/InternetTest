<UserControl
    x:Class="InternetTest.Views.TraceroutePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:InternetTest.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:InternetTest.Properties"
    xmlns:local="clr-namespace:InternetTest.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:InternetTest.ViewModels.Components"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="..\Fonts\#Hauora"
    Foreground="{DynamicResource Foreground1}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.ColumnSpan="6">
            <TextBlock
                Margin="10 5"
                FontSize="24"
                FontWeight="Bold"
                Text="{x:Static lang:Resources.TraceRoute}" />
            <TextBlock
                Margin="10 0"
                FontSize="14"
                Text="{x:Static lang:Resources.TraceroutePageDesc}"
                TextWrapping="Wrap" />
        </StackPanel>
        <Border
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="10"
            Padding="10"
            Background="{DynamicResource CardBackground}"
            BorderBrush="{DynamicResource Border}"
            BorderThickness="1"
            CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel Grid.ColumnSpan="2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            FontSize="16"
                            Text="&#xF531;" />
                        <TextBlock
                            Margin="5 0 0 0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="Bold"
                            Text="{x:Static lang:Resources.TracerouteConfiguration}" />
                    </StackPanel>
                    <TextBlock Foreground="{DynamicResource DarkGray}" Text="{x:Static lang:Resources.TraceRouteDesc}" />
                    <TextBlock
                        Margin="0 5"
                        FontWeight="SemiBold"
                        Text="{x:Static lang:Resources.TargetHostname}" />
                    <TextBox
                        Margin="0 5"
                        Padding="5"
                        VerticalContentAlignment="Center"
                        Text="{Binding Target, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <Button
                    Grid.Row="1"
                    Width="100"
                    Margin="0 10 0 0"
                    Padding="5"
                    HorizontalAlignment="Left"
                    Background="{DynamicResource Accent}"
                    Command="{Binding TraceCommand}"
                    Content="{x:Static lang:Resources.Trace}"
                    FontWeight="SemiBold"
                    Foreground="{DynamicResource WindowButtonsHoverForeground1}" />
            </Grid>
        </Border>
        <Border
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="10"
            Padding="10"
            Background="{DynamicResource CardBackground}"
            BorderBrush="{DynamicResource Border}"
            BorderThickness="1"
            CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel Grid.ColumnSpan="2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            FontSize="16"
                            Text="&#xF4FC;" />
                        <TextBlock
                            Margin="5 0 0 0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="Bold"
                            Text="{x:Static lang:Resources.TraceRoute}" />
                    </StackPanel>
                    <TextBlock
                        d:Text="{x:Static lang:Resources.RouteTraceDesc}"
                        Foreground="{DynamicResource DarkGray}"
                        Text="{Binding TraceRouteDesc}" />
                </StackPanel>
                <ItemsControl
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    ItemsSource="{Binding TracerouteItems}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type vm:TracerouteItemViewModel}">
                            <components:TracerouteItem />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>
    </Grid>
</UserControl>

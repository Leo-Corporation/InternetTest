                                    <TextBlock
                                        Margin="0 0 10 0"
                                        VerticalAlignment="Center"
                                        FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                                        FontWeight="Regular"
                                        Text="&#xF583;" />
                                    <TextBlock VerticalAlignment="Center" Text="GitHub" />

<UserControl
    x:Class="InternetTest.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:InternetTest.Properties"
    xmlns:local="clr-namespace:InternetTest.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="..\Fonts\#Hauora"
    Foreground="{DynamicResource Foreground1}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="6">
            <TextBlock
                Margin="10 5"
                FontSize="24"
                FontWeight="Bold"
                Text="{x:Static lang:Resources.Settings}" />
            <TextBlock
                Margin="10 0"
                FontSize="14"
                Text="{x:Static lang:Resources.SettingsDesc}"
                TextWrapping="Wrap" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="4">
            <Border
                Margin="5"
                Padding="10"
                Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource Border}"
                BorderThickness="1"
                CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                            FontSize="16"
                            Text="&#xF2F6;" />
                        <TextBlock
                            Margin="5 0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="Bold"
                            Text="{x:Static lang:Resources.General}" />
                    </StackPanel>
                    <TextBlock
                        Grid.Row="1"
                        Foreground="{DynamicResource DarkGray}"
                        Text="{x:Static lang:Resources.GeneralDesc}" />
                    <StackPanel Grid.Row="2">
                        <TextBlock
                            Margin="0 5"
                            FontWeight="SemiBold"
                            Text="{x:Static lang:Resources.Theme}" />
                        <StackPanel Orientation="Horizontal">
                            <RadioButton
                                BorderThickness="2"
                                GroupName="Theme"
                                Style="{DynamicResource ThemeButton}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Rectangle
                                        Width="50"
                                        Height="50"
                                        RadiusX="4"
                                        RadiusY="4">
                                        <Rectangle.Fill>
                                            <ImageBrush ImageSource="../Assets/LightTheme.png" />
                                        </Rectangle.Fill>
                                    </Rectangle>
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="5"
                                        VerticalAlignment="Center"
                                        FontWeight="SemiBold"
                                        Text="{x:Static lang:Resources.Light}" />

                                </Grid>
                            </RadioButton>
                            <RadioButton
                                Margin="10 0"
                                BorderThickness="2"
                                GroupName="Theme"
                                Style="{DynamicResource ThemeButton}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Rectangle
                                        Width="50"
                                        Height="50"
                                        RadiusX="4"
                                        RadiusY="4">
                                        <Rectangle.Fill>
                                            <ImageBrush ImageSource="../Assets/DarkTheme.png" />
                                        </Rectangle.Fill>
                                    </Rectangle>
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="5"
                                        VerticalAlignment="Center"
                                        FontWeight="SemiBold"
                                        Text="{x:Static lang:Resources.Dark}" />

                                </Grid>
                            </RadioButton>
                            <RadioButton
                                BorderThickness="2"
                                GroupName="Theme"
                                Style="{DynamicResource ThemeButton}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Rectangle
                                        Width="50"
                                        Height="50"
                                        RadiusX="4"
                                        RadiusY="4">
                                        <Rectangle.Fill>
                                            <ImageBrush ImageSource="../Assets/SystemTheme.png" />
                                        </Rectangle.Fill>
                                    </Rectangle>
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="5"
                                        VerticalAlignment="Center"
                                        FontWeight="SemiBold"
                                        Text="{x:Static lang:Resources.DefaultTheme}" />

                                </Grid>
                            </RadioButton>
                        </StackPanel>
                        <TextBlock
                            Margin="0 5"
                            FontWeight="SemiBold"
                            Text="{x:Static lang:Resources.StartupPage}" />
                        <ComboBox
                            Width="200"
                            HorizontalAlignment="Left"
                           >
                            <ComboBoxItem Content="{x:Static lang:Resources.Home}" />
                            <ComboBoxItem Content="{x:Static lang:Resources.DownDetector}" />
                            <ComboBoxItem Content="{x:Static lang:Resources.DNSTool}" />
                            <ComboBoxItem Content="{x:Static lang:Resources.WiFiNetworks}" />
                            <ComboBoxItem Content="{x:Static lang:Resources.LocateIP}" />
                            <ComboBoxItem Content="{x:Static lang:Resources.IPConfig}" />
                            <ComboBoxItem Content="{x:Static lang:Resources.Ping}" />
                            <ComboBoxItem Content="{x:Static lang:Resources.Requests}" />
                            <ComboBoxItem Content="{x:Static lang:Resources.TraceRoute}" />
                        </ComboBox>
                        <TextBlock
                            Margin="0 5"
                            FontWeight="SemiBold"
                            Text="{x:Static lang:Resources.Language}" />
                        <ComboBox Width="200" HorizontalAlignment="Left">
                            <ComboBoxItem Content="{x:Static lang:Resources.DefaultLanguage}" />
                            <ComboBoxItem Content="English (United States)" />
                            <ComboBoxItem Content="Français (France)" />
                            <ComboBoxItem Content="中文（简体）" />
                            <ComboBoxItem Content="Italiano (Italia)" />
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>

<Page
    x:Class="InternetTest.Pages.FirstRun.ThemePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:InternetTest.Properties"
    xmlns:local="clr-namespace:InternetTest.Pages.FirstRun"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ThemePage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="../../Fonts/#Hauora"
    Foreground="{DynamicResource Foreground1}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="ExtraBold"
                Text="{x:Static lang:Resources.Theme}" />
            <TextBlock HorizontalAlignment="Center" Text="{x:Static lang:Resources.ChangeTheme}" />
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Border
                    x:Name="LightBorder"
                    Margin="6"
                    BorderBrush="{x:Null}"
                    BorderThickness="2"
                    CornerRadius="5"
                    Cursor="Hand"
                    MouseEnter="Border_MouseEnter"
                    MouseLeave="Border_MouseLeave"
                    MouseLeftButtonUp="LightBorder_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Rectangle
                            Width="50"
                            Height="50"
                            RadiusX="4"
                            RadiusY="4">
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="../../Images/LightTheme.png" />
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock
                            Margin="10 0"
                            Padding="0 15"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="{x:Static lang:Resources.Light}" />
                    </StackPanel>
                </Border>
                <Border
                    x:Name="DarkBorder"
                    Margin="6"
                    BorderBrush="{x:Null}"
                    BorderThickness="2"
                    CornerRadius="5"
                    Cursor="Hand"
                    MouseEnter="Border_MouseEnter"
                    MouseLeave="Border_MouseLeave"
                    MouseLeftButtonUp="DarkBorder_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Rectangle
                            Width="50"
                            Height="50"
                            RadiusX="4"
                            RadiusY="4">
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="../../Images/DarkTheme.png" />
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock
                            Margin="10 0"
                            Padding="0 15"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="{x:Static lang:Resources.Dark}" />
                    </StackPanel>
                </Border>
                <Border
                    x:Name="SystemBorder"
                    Margin="6"
                    BorderBrush="{x:Null}"
                    BorderThickness="2"
                    CornerRadius="5"
                    Cursor="Hand"
                    MouseEnter="Border_MouseEnter"
                    MouseLeave="Border_MouseLeave"
                    MouseLeftButtonUp="SystemBorder_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Rectangle
                            Width="50"
                            Height="50"
                            RadiusX="4"
                            RadiusY="4">
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="../../Images/SystemTheme.png" />
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock
                            Margin="10 0"
                            Padding="0 15"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="{x:Static lang:Resources.Default}" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>

        <Button
            x:Name="NextBtn"
            Grid.Row="2"
            Margin="5 10"
            Padding="10 5"
            HorizontalAlignment="Center"
            Background="{DynamicResource Accent}"
            BorderThickness="0"
            Click="NextBtn_Click"
            Content="{x:Static lang:Resources.Next}"
            Cursor="Hand"
            FontWeight="ExtraBold"
            Foreground="{DynamicResource WindowButtonsHoverForeground1}"
            Style="{DynamicResource PrimaryButton}" />

    </Grid>
</Page>
